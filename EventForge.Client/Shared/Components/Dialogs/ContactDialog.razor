@using MudBlazor
@using EventForge.DTOs.Common
@inject IEntityManagementService EntityManagementService
@inject ISnackbar Snackbar
@inject ITranslationService TranslationService
@inject ILogger<ContactDialog> Logger

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudSelect @bind-Value="_contactType"
                              Label="@($"{TranslationService.GetTranslation("field.contactType", "Tipo Contatto")} *")"
                              Variant="Variant.Outlined"
                              Required="true">
                        <MudSelectItem Value="@ContactType.Email">@TranslationService.GetTranslation("contactType.email", "Email")</MudSelectItem>
                        <MudSelectItem Value="@ContactType.Phone">@TranslationService.GetTranslation("contactType.phone", "Telefono")</MudSelectItem>
                        <MudSelectItem Value="@ContactType.Fax">@TranslationService.GetTranslation("contactType.fax", "Fax")</MudSelectItem>
                    </MudSelect>
                </MudItem>
                
                <MudItem xs="12" md="6">
                    <MudSelect @bind-Value="_purpose"
                              Label="@TranslationService.GetTranslation("field.purpose", "Scopo")"
                              Variant="Variant.Outlined">
                        <MudSelectItem Value="@ContactPurpose.Primary">@TranslationService.GetTranslation("contactPurpose.primary", "Primario")</MudSelectItem>
                        <MudSelectItem Value="@ContactPurpose.Emergency">@TranslationService.GetTranslation("contactPurpose.emergency", "Emergenza")</MudSelectItem>
                        <MudSelectItem Value="@ContactPurpose.Coach">@TranslationService.GetTranslation("contactPurpose.coach", "Allenatore")</MudSelectItem>
                        <MudSelectItem Value="@ContactPurpose.Other">@TranslationService.GetTranslation("contactPurpose.other", "Altro")</MudSelectItem>
                    </MudSelect>
                </MudItem>
                
                <MudItem xs="12">
                    <MudTextField @bind-Value="_value"
                                 Label="@($"{TranslationService.GetTranslation("field.value", "Valore")} *")"
                                 Variant="Variant.Outlined"
                                 Required="true"
                                 MaxLength="100" />
                </MudItem>
                
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="_relationship"
                                 Label="@TranslationService.GetTranslation("field.relationship", "Relazione")"
                                 Variant="Variant.Outlined"
                                 MaxLength="50" />
                </MudItem>
                
                <MudItem xs="12" md="6">
                    <MudSwitch @bind-Value="_isPrimary" 
                              Label="@TranslationService.GetTranslation("field.isPrimary", "Primario")"
                              Color="Color.Primary" />
                </MudItem>
                
                <MudItem xs="12">
                    <MudTextField @bind-Value="_notes"
                                 Label="@TranslationService.GetTranslation("field.notes", "Note")"
                                 Variant="Variant.Outlined"
                                 Lines="3"
                                 MaxLength="100" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@TranslationService.GetTranslation("button.cancel", "Annulla")</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@(!_isValid || _isProcessing)">
            @if (_isProcessing)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
            }
            else
            {
                @TranslationService.GetTranslation("button.save", "Salva")
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    private IMudDialogInstance MudDialog { get; set; } = null!;

    // For Add mode
    [Parameter] 
    public Guid? OwnerId { get; set; }

    [Parameter] 
    public string? OwnerType { get; set; }

    // For Edit mode
    [Parameter] 
    public ContactDto? Contact { get; set; }

    private MudForm _form = null!;
    private bool _isValid;
    private bool _isProcessing;
    private ContactType _contactType = ContactType.Email;
    private ContactPurpose _purpose = ContactPurpose.Primary;
    private string _value = string.Empty;
    private string? _relationship;
    private bool _isPrimary;
    private string? _notes;
    private bool _isEditMode;

    protected override void OnParametersSet()
    {
        if (Contact != null)
        {
            // Edit mode
            _isEditMode = true;
            _contactType = Contact.ContactType;
            _purpose = Contact.Purpose;
            _value = Contact.Value;
            _relationship = Contact.Relationship;
            _isPrimary = Contact.IsPrimary;
            _notes = Contact.Notes;
        }
        else
        {
            // Add mode
            _isEditMode = false;
        }
    }

    private async Task Submit()
    {
        if (!_isValid) return;

        try
        {
            _isProcessing = true;

            if (_isEditMode && Contact != null)
            {
                // Edit mode
                var updateDto = new UpdateContactDto
                {
                    ContactType = _contactType,
                    Purpose = _purpose,
                    Value = _value,
                    Relationship = _relationship,
                    IsPrimary = _isPrimary,
                    Notes = _notes
                };

                await EntityManagementService.UpdateContactAsync(Contact.Id, updateDto);
                Snackbar.Add(TranslationService.GetTranslation("messages.updateSuccessful", "Aggiornamento completato con successo"), Severity.Success);
            }
            else if (OwnerId.HasValue && !string.IsNullOrEmpty(OwnerType))
            {
                // Add mode
                var createDto = new CreateContactDto
                {
                    OwnerId = OwnerId.Value,
                    OwnerType = OwnerType,
                    ContactType = _contactType,
                    Purpose = _purpose,
                    Value = _value,
                    Relationship = _relationship,
                    IsPrimary = _isPrimary,
                    Notes = _notes
                };

                await EntityManagementService.CreateContactAsync(createDto);
                Snackbar.Add(TranslationService.GetTranslation("messages.createSuccessful", "Creazione completata con successo"), Severity.Success);
            }

            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to {Action} contact", _isEditMode ? "update" : "create");
            var errorMsg = _isEditMode 
                ? TranslationService.GetTranslation("messages.updateFailed", "Errore durante l'aggiornamento")
                : TranslationService.GetTranslation("messages.createFailed", "Errore durante la creazione");
            Snackbar.Add(errorMsg, Severity.Error);
        }
        finally
        {
            _isProcessing = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
