        .health-tab-compact {
            background: var(--mud-palette-dark-surface);
            border-color: var(--mud-palette-dark-lines-default);
        }
    }

    /* Mobile adjustments */
    @@media (max-width: 768px) {
        .health-footer-minimal {
            right: 8px;
        }
        
        .health-tab-compact {
            padding: 3px 6px;
            min-width: 70px;
        }
        
        .health-status-text {
