        }
        @if (_isAdmin || _isManager)
        {
            <MudNavGroup title="@TranslationService.GetTranslation("nav.administration", "Amministrazione")" 
                         Icon="@Icons.Material.Outlined.Dashboard" 
                         Expanded="true">
                <MudNavLink Href="/admin" 
