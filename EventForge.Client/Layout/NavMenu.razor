                            Match="NavLinkMatch.All">
                    @TranslationService.GetTranslation("nav.adminDashboard", "Dashboard Admin")
                </MudNavLink>
                <!-- Gestione Eventi visible to SuperAdmin, Admin, Manager as per requirements -->
                @if (_canManageEvents)
                {
                    <MudNavLink Href="/admin/event-management" 
