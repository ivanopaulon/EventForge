        await Task.Delay(100); // Placeholder
        Snackbar.Add(TranslationService.GetTranslation("chat.chatInfoPlaceholder", "Informazioni chat - Da implementare"), Severity.Info);
    }

    /// <summary>
    /// Manage group settings
