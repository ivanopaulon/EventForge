@page "/warehouse/inventory-list"
@using Microsoft.AspNetCore.Authorization
@using EventForge.DTOs.Common
@using EventForge.DTOs.Warehouse
@using EventForge.Client.Shared.Components
@using EventForge.Client.Shared.Components.Dashboard
@using EventForge.Client.Services
@attribute [Authorize(Roles = "SuperAdmin,Admin,Manager,Operator")]
@inject IAuthService AuthService
@inject IInventoryService InventoryService
@inject IAuthenticationDialogService AuthenticationDialogService
@inject ISnackbar Snackbar
@inject ITranslationService TranslationService
@inject ILogger<InventoryList> Logger
@inject NavigationManager NavigationManager
@inject IDialogService DialogService

<PageTitle>@TranslationService.GetTranslation("warehouse.inventoryDocuments", "Documenti di Inventario")</PageTitle>
<PageLoadingOverlay Visible="_isLoading || _isLoadingDocuments"
                    Message="@(_isLoading ? TranslationService.GetTranslation("messages.loadingPage", "Caricamento pagina...") : TranslationService.GetTranslation("common.loading", "Caricamento..."))" />

@if (!_isLoading)
{
    <div class="inventory-page-root">
        <div class="inventory-top">
            <ManagementDashboard TItem="InventoryDocumentDto"
                                 Items="_filteredDocuments"
                                 Metrics="_dashboardMetrics"
                                 EntityType="InventoryDocument"
                                 AllowConfiguration="true"
                                 UseServerSide="false" />
        </div>

        <div class="eftable-wrapper">
            <EFTable @ref="_efTable"
                 TItem="InventoryDocumentDto"
                 Items="_filteredDocuments"
                 MultiSelection="true"
                 SelectedItems="_selectedDocuments"
                 SelectedItemsChanged="_selectedItemsChangedCallback"
                 IsLoading="_isLoadingDocuments"
                 ComponentKey="InventoryList"
                 InitialColumnConfigurations="_initialColumns"
                 AllowDragDropGrouping="true">
            <ToolBarContent>
                <MudText Typo="Typo.h5">
                    @TranslationService.GetTranslation("warehouse.inventoryDocuments", "Documenti di Inventario")
                </MudText>
                <MudSpacer />
                <MudTextField @bind-Value="_searchTerm"
                              @bind-Value:after="OnSearchChanged"
                              Label="@TranslationService.GetTranslation("warehouse.searchDocuments", "Cerca documenti")"
                              Placeholder="@TranslationService.GetTranslation("warehouse.searchPlaceholder", "Inserisci numero...")"
                              Variant="Variant.Outlined"
                              Adornment="Adornment.End"
                              AdornmentIcon="@Icons.Material.Outlined.Search"
                              Clearable="true"
                              Class="ef-input" />
                <MudSelect @bind-Value="_filterStatus"
                           @bind-Value:after="OnFilterChanged"
                           Label="@TranslationService.GetTranslation("common.status", "Stato")"
                           Variant="Variant.Outlined"
                           Clearable="true"
                           Class="ml-2"
                           Style="min-width: 150px;">
                    <MudSelectItem Value="@("Draft")">@TranslationService.GetTranslation("document.status.draft", "Bozza")</MudSelectItem>
                    <MudSelectItem Value="@("Closed")">@TranslationService.GetTranslation("document.status.closed", "Chiuso")</MudSelectItem>
                </MudSelect>
                <ManagementTableToolbar ShowSelectionBadge="true"
                                        SelectedCount="@_selectedDocuments.Count"
                                        ShowRefresh="true"
                                        ShowCreate="true"
                                        ShowDelete="false"
                                        CreateTooltip="warehouse.startProcedure"
                                        IsDisabled="_isLoadingDocuments"
                                        OnRefresh="@LoadInventoryDocuments"
                                        OnCreate="@CreateNewInventory" />
            </ToolBarContent>
            <HeaderContent Context="columnConfigurations">
                @foreach (var column in columnConfigurations.Where(c => c.IsVisible).OrderBy(c => c.Order))
                {
                    @if (column.PropertyName == "Number")
                    {
                        <EFTableColumnHeader TItem="InventoryDocumentDto" PropertyName="Number" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel SortBy="@(new Func<InventoryDocumentDto, object>(x => x.Number))">@TranslationService.GetTranslation("document.number", "Numero")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                    else if (column.PropertyName == "InventoryDate")
                    {
                        <EFTableColumnHeader TItem="InventoryDocumentDto" PropertyName="InventoryDate" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel InitialDirection="SortDirection.Descending" SortBy="@(new Func<InventoryDocumentDto, object>(x => x.InventoryDate))">@TranslationService.GetTranslation("document.date", "Data")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                    else if (column.PropertyName == "WarehouseName")
                    {
                        <EFTableColumnHeader TItem="InventoryDocumentDto" PropertyName="WarehouseName" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel SortBy="@(new Func<InventoryDocumentDto, object>(x => x.WarehouseName ?? string.Empty))">@TranslationService.GetTranslation("warehouse.warehouse", "Magazzino")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                    else if (column.PropertyName == "Status")
                    {
                        <EFTableColumnHeader TItem="InventoryDocumentDto" PropertyName="Status" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel SortBy="@(new Func<InventoryDocumentDto, object>(x => x.Status))">@TranslationService.GetTranslation("document.status", "Stato")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                    else if (column.PropertyName == "TotalItems")
                    {
                        <EFTableColumnHeader TItem="InventoryDocumentDto" PropertyName="TotalItems" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel SortBy="@(new Func<InventoryDocumentDto, object>(x => x.TotalItems))">@TranslationService.GetTranslation("document.totalItems", "Articoli")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                    else if (column.PropertyName == "CreatedAt")
                    {
                        <EFTableColumnHeader TItem="InventoryDocumentDto" PropertyName="CreatedAt" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel SortBy="@(new Func<InventoryDocumentDto, object>(x => x.CreatedAt))">@TranslationService.GetTranslation("common.createdAt", "Data Creazione")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                }
                <MudTh Class="text-center" Style="min-width:120px;">@TranslationService.GetTranslation("common.actions", "Azioni")</MudTh>
            </HeaderContent>

            <RowTemplate Context="item">
                @{
                    var visibleColumns = _efTable?.ColumnConfigurations?.Where(c => c.IsVisible).OrderBy(c => c.Order).ToList() ?? _initialColumns.Where(c => c.IsVisible).OrderBy(c => c.Order).ToList();
                }
                @foreach (var column in visibleColumns)
                {
                    @if (column.PropertyName == "Number")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("document.number", "Numero")">
                            <div>
                                <MudText Typo="Typo.body2" Style="font-weight: 600;">@item.Number</MudText>
                                @if (!string.IsNullOrEmpty(item.Series))
                                {
                                    <MudText Typo="Typo.caption" Class="mud-text-secondary">@item.Series</MudText>
                                }
                            </div>
                        </MudTd>
                    }
                    else if (column.PropertyName == "InventoryDate")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("document.date", "Data")">
                            <MudText Typo="Typo.body2">@item.InventoryDate.ToLocalTime().ToString("dd/MM/yyyy")</MudText>
                        </MudTd>
                    }
                    else if (column.PropertyName == "WarehouseName")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("warehouse.warehouse", "Magazzino")">
                            <MudText Typo="Typo.body2">@(item.WarehouseName ?? "-")</MudText>
                        </MudTd>
                    }
                    else if (column.PropertyName == "Status")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("document.status", "Stato")">
                            @if (item.Status == "Draft")
                            {
                                <MudChip T="string" Color="Color.Warning" Size="Size.Small" Icon="@Icons.Material.Outlined.Edit">@TranslationService.GetTranslation("document.status.draft", "Bozza")</MudChip>
                            }
                            else if (item.Status == "Closed")
                            {
                                <MudChip T="string" Color="Color.Success" Size="Size.Small" Icon="@Icons.Material.Outlined.CheckCircle">@TranslationService.GetTranslation("document.status.closed", "Chiuso")</MudChip>
                            }
                            else
                            {
                                <MudChip T="string" Color="Color.Default" Size="Size.Small">@item.Status</MudChip>
                            }
                        </MudTd>
                    }
                    else if (column.PropertyName == "TotalItems")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("document.totalItems", "Articoli")">
                            <MudText Typo="Typo.body2">@item.TotalItems</MudText>
                        </MudTd>
                    }
                    else if (column.PropertyName == "CreatedAt")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("common.createdAt", "Data Creazione")">
                            <MudText Typo="Typo.body2">@item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</MudText>
                        </MudTd>
                    }
                }
                <MudTd DataLabel="@TranslationService.GetTranslation("common.actions", "Azioni")" Class="text-center">
                    <ActionButtonGroup EntityName="@TranslationService.GetTranslation("warehouse.inventoryDocument", "Documento Inventario")"
                                      ItemDisplayName="@item.Number"
                                      ShowView="true"
                                      ShowEdit="false"
                                      ShowAuditLog="false"
                                      ShowToggleStatus="false"
                                      ShowDelete="false"
                                      OnView="@(() => ViewDocumentDetails(item))">
                        <AdditionalActions>
                            @if (item.Status == "Draft")
                            {
                                <MudTooltip Text="@TranslationService.GetTranslation("warehouse.finalizeDocument", "Finalizza Documento")">
                                    <MudIconButton Icon="@Icons.Material.Outlined.CheckCircle"
                                                   Color="Color.Success"
                                                   Size="Size.Small"
                                                   OnClick="@(() => FinalizeDocument(item))"
                                                   aria-label="@TranslationService.GetTranslation("warehouse.finalizeDocument", "Finalizza Documento")" />
                                </MudTooltip>
                            }
                        </AdditionalActions>
                    </ActionButtonGroup>
                </MudTd>
            </RowTemplate>

            <NoRecordsContent>
                <div class="text-center pa-2 pa-sm-3 pa-md-4">
                    <MudIcon Icon="@Icons.Material.Outlined.Inventory2" Size="Size.Medium" Class="mb-4 mud-text-secondary" />
                    <MudText Typo="Typo.h6" Class="mb-2">
                        @(_inventoryDocuments.Any() ?
                            TranslationService.GetTranslation("warehouse.noDocumentsMatchFilters", "Nessun documento corrisponde ai filtri applicati") :
                            TranslationService.GetTranslation("warehouse.noInventoryDocuments", "Nessun documento di inventario trovato"))
                    </MudText>
                    @if (_inventoryDocuments.Any())
                    {
                        <MudButton Variant="Variant.Text"
                                   Color="Color.Primary"
                                   StartIcon="@Icons.Material.Outlined.Clear"
                                   OnClick="@ClearFilters">
                            @TranslationService.GetTranslation("action.clearFilters", "Cancella filtri")
                        </MudButton>
                    }
                </div>
            </NoRecordsContent>
            </EFTable>

            <!-- Pagination -->
            @if (_totalCount > 0)
            {
                <MudDivider Class="my-4" />
                <div class="d-flex justify-center align-center flex-wrap gap-4">
                    @if (_totalPages > 1)
                    {
                        <MudPagination Count="@_totalPages" 
                                       Selected="@_currentPage" 
                                       Color="Color.Primary"
                                       Size="Size.Medium"
                                       ShowFirstButton="true"
                                       ShowLastButton="true"
                                       SelectedChanged="@OnPageChanged" />
                    }
                    <MudText Typo="Typo.caption" Color="Color.Secondary">
                        @if (_totalPages > 1)
                        {
                            @TranslationService.GetTranslation("pagination.info", 
                                "Pagina {0} di {1} - Totale: {2} documenti", 
                                _currentPage, _totalPages, _totalCount)
                        }
                        else
                        {
                            @TranslationService.GetTranslation("pagination.singlePage", 
                                "Totale: {0} documenti", 
                                _totalCount)
                        }
                    </MudText>
                </div>
            }
        </div>
    </div>
}

@code {
    // Dialog options for fullscreen audit dialog
    private readonly DialogOptions _auditDialogOptions = new() 
    { 
        FullScreen = true, 
        CloseButton = true,
        MaxWidth = MaxWidth.False
    };
    
    // UI State Management
    private bool _isLoading = true;
    private bool _isLoadingDocuments = false;

    // Filter and search state
    private string _searchTerm = string.Empty;
    private string? _filterStatus = null;
    private DateTime? _filterFromDate = null;
    private DateTime? _filterToDate = null;
    private CancellationTokenSource? _searchDebounceCts;

    // Pagination state
    private int _currentPage = 1;
    private int _pageSize = 20;
    private long _totalCount = 0;
    private int _totalPages => (int)((_totalCount + _pageSize - 1) / _pageSize);

    // Data collections
    private List<InventoryDocumentDto> _inventoryDocuments = new();
    private HashSet<InventoryDocumentDto> _selectedDocuments = new();

    // EFTable reference
    private EFTable<InventoryDocumentDto> _efTable = null!;

    // Column configuration for EFTable
    private List<EFTableColumnConfiguration> _initialColumns = new()
    {
        new() { PropertyName = "Number", DisplayName = "Numero", IsVisible = true, Order = 0 },
        new() { PropertyName = "InventoryDate", DisplayName = "Data", IsVisible = true, Order = 1 },
        new() { PropertyName = "WarehouseName", DisplayName = "Magazzino", IsVisible = true, Order = 2 },
        new() { PropertyName = "Status", DisplayName = "Stato", IsVisible = true, Order = 3 },
        new() { PropertyName = "TotalItems", DisplayName = "Articoli", IsVisible = true, Order = 4 },
        new() { PropertyName = "CreatedAt", DisplayName = "Data Creazione", IsVisible = true, Order = 5 }
    };

    // Dashboard configuration
    private List<DashboardMetric<InventoryDocumentDto>> _dashboardMetrics = new()
    {
        new()
        {
            Title = "Totale Documenti",
            Type = MetricType.Count,
            Icon = Icons.Material.Outlined.Inventory2,
            Color = "primary",
            Description = "Numero totale di documenti",
            Format = "N0"
        },
        new()
        {
            Title = "Bozze",
            Type = MetricType.Count,
            Filter = d => d.Status == "Draft",
            Icon = Icons.Material.Outlined.Edit,
            Color = "warning",
            Description = "Documenti in bozza",
            Format = "N0"
        },
        new()
        {
            Title = "Chiusi",
            Type = MetricType.Count,
            Filter = d => d.Status == "Closed",
            Icon = Icons.Material.Outlined.CheckCircle,
            Color = "success",
            Description = "Documenti chiusi",
            Format = "N0"
        },
        new()
        {
            Title = "Ultimi 30 Giorni",
            Type = MetricType.Count,
            Filter = d => d.InventoryDate >= DateTime.Now.AddDays(-30),
            Icon = Icons.Material.Outlined.CalendarToday,
            Color = "info",
            Description = "Documenti degli ultimi 30 giorni",
            Format = "N0"
        }
    };

    private EventCallback<HashSet<InventoryDocumentDto>> _selectedItemsChangedCallback => EventCallback.Factory.Create<HashSet<InventoryDocumentDto>>(this, OnSelectedItemsChanged);

    /// <summary>
    /// Computed property for filtered documents based on search criteria.
    /// </summary>
    private IEnumerable<InventoryDocumentDto> _filteredDocuments => 
        _inventoryDocuments.Where(d => 
            // Search filter: check number and series
            (string.IsNullOrEmpty(_searchTerm) || 
             d.Number.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
             (d.Series != null && d.Series.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase))) &&
            // Status filter
            (string.IsNullOrEmpty(_filterStatus) || d.Status == _filterStatus) &&
            // Date range filter
            (!_filterFromDate.HasValue || d.InventoryDate >= _filterFromDate.Value) &&
            (!_filterToDate.HasValue || d.InventoryDate <= _filterToDate.Value));

    /// <summary>
    /// Handles selection changes from EFTable
    /// </summary>
    private void OnSelectedItemsChanged(HashSet<InventoryDocumentDto> items)
    {
        _selectedDocuments = items;
        StateHasChanged();
    }

    /// <summary>
    /// Component initialization.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Check authentication
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            if (!isAuthenticated)
            {
                await ShowLoginDialogAsync();
                return;
            }

            // Load documents
            await LoadInventoryDocuments();
        }
        catch (Exception ex)
        {
            Snackbar.Add(TranslationService.GetTranslation("warehouse.loadingPageError", "Errore nel caricamento della pagina: {0}", ex.Message), Severity.Error);
            Logger.LogError(ex, "Error loading inventory documents page");
        }
        finally
        {
            _isLoading = false;
        }
    }

    /// <summary>
    /// Loads inventory document data.
    /// </summary>
    private async Task LoadInventoryDocuments()
    {
        try
        {
            _isLoadingDocuments = true;
            var result = await InventoryService.GetInventoryDocumentsAsync(
                _currentPage, 
                _pageSize,
                _filterStatus,
                _filterFromDate,
                _filterToDate);
                
            if (result != null)
            {
                _inventoryDocuments = result.Items.ToList();
                _totalCount = result.TotalCount;
            }
            else
            {
                Snackbar.Add(TranslationService.GetTranslation("warehouse.loadInventoryError", "Errore nel caricamento inventario"), Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading inventory documents");
            Snackbar.Add(TranslationService.GetTranslation("warehouse.loadInventoryError", "Errore nel caricamento inventario"), Severity.Error);
        }
        finally
        {
            _isLoadingDocuments = false;
        }
    }

    /// <summary>
    /// Clears all active filters.
    /// </summary>
    private void ClearFilters()
    {
        _searchTerm = string.Empty;
        _filterStatus = null;
        _filterFromDate = null;
        _filterToDate = null;
        StateHasChanged();
    }

    private async Task OnSearchChanged()
    {
        // Cancel previous debounce if any
        _searchDebounceCts?.Cancel();
        _searchDebounceCts = new CancellationTokenSource();
        var token = _searchDebounceCts.Token;
        
        try
        {
            await Task.Delay(300, token); // Debounce with cancellation
            if (!token.IsCancellationRequested)
            {
                StateHasChanged();
            }
        }
        catch (OperationCanceledException)
        {
            // Swallow cancellation
        }
    }

    private void OnFilterChanged()
    {
        StateHasChanged();
    }

    private async Task OnPageChanged(int page)
    {
        _currentPage = page;
        await LoadInventoryDocuments();
    }

    private async Task ViewDocumentDetails(InventoryDocumentDto document)
    {
        var parameters = new DialogParameters
        {
            { "Document", document },
            { "OnFinalize", EventCallback.Factory.Create<InventoryDocumentDto>(this, OnDocumentFinalized) }
        };

        var options = new DialogOptions 
        { 
            MaxWidth = MaxWidth.Large,
            FullWidth = true,
            CloseButton = true
        };

        await DialogService.ShowAsync<InventoryDocumentDetailsDialog>(
            TranslationService.GetTranslation("warehouse.documentDetails", "Dettagli Documento"),
            parameters,
            options);
    }

    private async Task FinalizeDocument(InventoryDocumentDto document)
    {
        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslation("warehouse.confirmFinalizeDocument", 
            "Sei sicuro di voler finalizzare il documento '{0}'? Una volta finalizzato, il documento non potrà più essere modificato e gli aggiustamenti di stock verranno applicati.", 
            document.Number);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.confirm", "Conferma"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                _isLoading = true;
                var result = await InventoryService.FinalizeInventoryDocumentAsync(document.Id);
                
                if (result != null)
                {
                    Snackbar.Add(
                        TranslationService.GetTranslation("warehouse.documentFinalized", "Documento finalizzato con successo!"), 
                        Severity.Success);
                    
                    // Reload the list to reflect the change
                    await LoadInventoryDocuments();
                }
                else
                {
                    Snackbar.Add(
                        TranslationService.GetTranslation("warehouse.finalizeDocumentError", "Errore nella finalizzazione del documento"), 
                        Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error finalizing inventory document {DocumentId}", document.Id);
                Snackbar.Add(
                    TranslationService.GetTranslation("warehouse.finalizeDocumentError", "Errore nella finalizzazione del documento: {0}", ex.Message), 
                    Severity.Error);
            }
            finally
            {
                _isLoading = false;
            }
        }
    }

    private void CreateNewInventory()
    {
        NavigationManager.NavigateTo("/warehouse/inventory-procedure");
    }

    private async Task ShowLoginDialogAsync()
    {
        var result = await AuthenticationDialogService.ShowLoginDialogAsync();
        if (result)
        {
            // Reload the page after successful login
            await OnInitializedAsync();
        }
    }

    private async Task OnDocumentFinalized(InventoryDocumentDto document)
    {
        // Reload the list when a document is finalized from the details dialog
        await LoadInventoryDocuments();
    }
}
