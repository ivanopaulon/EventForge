@using EventForge.DTOs.Products
@using EventForge.Client.Services
@inject ITranslationService TranslationService
@inject IProductService ProductService
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject ILogger<ProductCodesTab> Logger

<MudGrid>
    <MudItem xs="12" Class="d-flex justify-space-between align-center mb-2">
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Outlined.QrCode2" Class="mr-2" />
            @TranslationService.GetTranslation("product.alternativeCodes", "Codici Alternativi")
            <MudChip T="string" Size="Size.Small" Class="ml-2">@(_productCodes?.Count() ?? 0)</MudChip>
        </MudText>
        <MudButton Variant="Variant.Filled" 
                   Color="Color.Primary" 
                   StartIcon="@Icons.Material.Outlined.Add"
                   OnClick="@OpenCreateDialog"
                   Size="Size.Small">
            @TranslationService.GetTranslation("common.add", "Aggiungi")
        </MudButton>
    </MudItem>

    <MudItem xs="12">
        @if (_isLoading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
        }
        else if (_productCodes == null || !_productCodes.Any())
        {
            <MudAlert Severity="Severity.Info">
                @TranslationService.GetTranslation("product.noAlternativeCodes", "Nessun codice alternativo configurato")
            </MudAlert>
        }
        else
        {
            <MudTable Items="_productCodes" Hover="true" Striped="true" Dense="true">
                <HeaderContent>
                    <MudTh>@TranslationService.GetTranslation("field.codeType", "Tipo Codice")</MudTh>
                    <MudTh>@TranslationService.GetTranslation("field.code", "Codice")</MudTh>
                    <MudTh>@TranslationService.GetTranslation("field.description", "Descrizione")</MudTh>
                    <MudTh>@TranslationService.GetTranslation("field.status", "Stato")</MudTh>
                    <MudTh Style="text-align: right;">@TranslationService.GetTranslation("field.actions", "Azioni")</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="@TranslationService.GetTranslation("field.codeType", "Tipo Codice")">@context.CodeType</MudTd>
                    <MudTd DataLabel="@TranslationService.GetTranslation("field.code", "Codice")">@context.Code</MudTd>
                    <MudTd DataLabel="@TranslationService.GetTranslation("field.description", "Descrizione")">@context.AlternativeDescription</MudTd>
                    <MudTd DataLabel="@TranslationService.GetTranslation("field.status", "Stato")">@context.Status</MudTd>
                    <MudTd DataLabel="@TranslationService.GetTranslation("field.actions", "Azioni")" Style="text-align: right;">
                        <MudIconButton Icon="@Icons.Material.Outlined.Edit" 
                                       Size="Size.Small" 
                                       Color="Color.Primary"
                                       OnClick="@(() => OpenEditDialog(context))" />
                        <MudIconButton Icon="@Icons.Material.Outlined.Delete" 
                                       Size="Size.Small" 
                                       Color="Color.Error"
                                       OnClick="@(() => DeleteCodeAsync(context))" />
                    </MudTd>
                </RowTemplate>
            </MudTable>
        }
    </MudItem>
</MudGrid>

@code {
    [Parameter, EditorRequired]
    public Guid ProductId { get; set; }

    private IEnumerable<ProductCodeDto>? _productCodes;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadCodesAsync();
    }

    private async Task LoadCodesAsync()
    {
        _isLoading = true;
        try
        {
            _productCodes = await ProductService.GetProductCodesAsync(ProductId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading product codes for product {ProductId}", ProductId);
            Snackbar.Add(TranslationService.GetTranslation("product.loadCodesError", "Errore nel caricamento dei codici"), Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void OpenCreateDialog()
    {
        // TODO: Implement create dialog
        Snackbar.Add("Funzionalità in fase di implementazione", Severity.Info);
    }

    private void OpenEditDialog(ProductCodeDto code)
    {
        // TODO: Implement edit dialog
        Snackbar.Add("Funzionalità in fase di implementazione", Severity.Info);
    }

    private async Task DeleteCodeAsync(ProductCodeDto code)
    {
        var confirmed = await DialogService.ShowMessageBox(
            TranslationService.GetTranslation("common.confirm", "Conferma"),
            TranslationService.GetTranslation("product.confirmDeleteCode", "Sei sicuro di voler eliminare questo codice?"),
            yesText: TranslationService.GetTranslation("common.yes", "Sì"),
            noText: TranslationService.GetTranslation("common.no", "No"));

        if (confirmed == true)
        {
            try
            {
                await ProductService.DeleteProductCodeAsync(code.Id);
                Snackbar.Add(TranslationService.GetTranslation("product.codeDeleted", "Codice eliminato con successo"), Severity.Success);
                await LoadCodesAsync();
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error deleting product code {CodeId}", code.Id);
                Snackbar.Add(TranslationService.GetTranslation("product.deleteCodeError", "Errore nell'eliminazione del codice"), Severity.Error);
            }
        }
    }
}
