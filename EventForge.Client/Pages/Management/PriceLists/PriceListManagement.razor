    private async Task BulkDelete()
    {
        var parameters = new DialogParameters<ConfirmationDialog>
        {
            { x => x.ContentText, TranslationService.GetTranslation("pricelist.bulkDeleteConfirm", "Sei sicuro di voler eliminare {0} listini selezionati?", _selectedItems.Count) },
            { x => x.ButtonText, TranslationService.GetTranslation("common.delete", "Elimina") },
            { x => x.Color, Color.Error }
        };

        var dialog = await DialogService.ShowAsync<ConfirmationDialog>(
            TranslationService.GetTranslation("common.confirmDeletion", "Conferma eliminazione"),
            parameters);

        var result = await dialog.Result;

        if (!result.Canceled)
        {
            var successCount = 0;
            var errorCount = 0;

            foreach (var item in _selectedItems.ToList())
            {
                try
                {
                    var deleted = await PriceListService.DeleteAsync(item.Id, CancellationToken.None);
                    if (deleted)
                    {
                        successCount++;
                    }
                    else
                    {
                        errorCount++;
                    }
                }
                catch (Exception ex)
                {
                    errorCount++;
                    Logger.LogError(ex, "Error deleting price list {Id}", item.Id);
                }
            }

            if (successCount > 0)
            {
                Snackbar.Add(TranslationService.GetTranslation("pricelist.bulkDeleteSuccess", "{0} listini eliminati con successo", successCount), Severity.Success);
            }

            if (errorCount > 0)
            {
                Snackbar.Add(TranslationService.GetTranslation("pricelist.bulkDeleteErrors", "{0} errori durante l'eliminazione", errorCount), Severity.Error);
            }

            _selectedItems.Clear();
            await LoadDataAsync();
        }
    }

