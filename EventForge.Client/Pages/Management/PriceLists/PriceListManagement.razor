    private async Task DeleteItem(PriceListDto item)
    {
        var parameters = new DialogParameters<ConfirmationDialog>
        {
            { x => x.ContentText, TranslationService.GetTranslation("pricelist.deleteConfirm", "Sei sicuro di voler eliminare il listino '{0}'? Questa operazione non può essere annullata.", item.Name) },
            { x => x.ButtonText, TranslationService.GetTranslation("common.delete", "Elimina") },
            { x => x.Color, Color.Error }
        };

        var dialog = await DialogService.ShowAsync<ConfirmationDialog>(
            TranslationService.GetTranslation("common.confirmDeletion", "Conferma eliminazione"),
            parameters);

        var result = await dialog.Result;

        if (!result.Canceled)
        {
            try
            {
                var deleted = await PriceListService.DeleteAsync(item.Id, CancellationToken.None);
                if (deleted)
                {
                    Snackbar.Add(TranslationService.GetTranslation("pricelist.deleted", "Listino eliminato con successo"), Severity.Success);
                    await LoadDataAsync();
                }
                else
                {
                    Snackbar.Add(TranslationService.GetTranslation("pricelist.deleteNotFound", "Listino non trovato"), Severity.Warning);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslation("pricelist.deleteError", "Errore durante l'eliminazione: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error deleting price list {Id}", item.Id);
            }
        }
    }

