@page "/management/pricelists"
@using Microsoft.AspNetCore.Authorization
@using EventForge.DTOs.PriceLists
@using EventForge.DTOs.Common
@using EventForge.Client.Shared.Components
@using EventForge.Client.Extensions
@using MudBlazor
@using EventForge.Client.Shared.Components.Dialogs
@attribute [Authorize]
@inject IPriceListService PriceListService
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@inject IAuthenticationDialogService AuthenticationDialogService
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inject ITranslationService TranslationService
@inject IJSRuntime JSRuntime
@inject ILogger<PriceListManagement> Logger

<PageLoadingOverlay Visible="_isLoading || _isLoadingData"
                     Message="@(_isLoading ? TranslationService.GetTranslation("messages.loadingPage", "Caricamento pagina...") : TranslationService.GetTranslation("common.loading", "Caricamento..."))" />

@if (!_isLoading)
{
    <div class="pricelist-page-root">
        <!-- Quick Filters -->
        <QuickFilters TItem="PriceListDto"
                      Items="_items"
                      Filters="_quickFilters"
                      OnFilterSelected="@HandleQuickFilter"
                      ShowCount="true" />

        <div class="eftable-wrapper">
            <EFTable @ref="_efTable"
                     TItem="PriceListDto"
                     Items="_filteredItems"
                     MultiSelection="true"
                     SelectedItems="_selectedItems"
                     SelectedItemsChanged="_selectedItemsChangedCallback"
                     IsLoading="_isLoadingData"
                     ComponentKey="PriceListManagement"
                     InitialColumnConfigurations="_initialColumns"
                     AllowDragDropGrouping="true"
                     OnRowClick="@HandleRowClick">
                <ToolBarContent>
                    <MudText Typo="Typo.h5">
                        @TranslationService.GetTranslation("pricelist.management.title", "Gestione Listini Prezzi")
                    </MudText>
                    <MudSpacer />
                    <MudTextField @bind-Value="_searchTerm"
                                  Placeholder="@TranslationService.GetTranslation("common.search", "Cerca...")"
                                  Adornment="Adornment.Start"
                                  AdornmentIcon="@Icons.Material.Outlined.Search"
                                  IconSize="Size.Medium"
                                  Immediate="true"
                                  DebounceInterval="300"
                                  Clearable="true"
                                  Class="mr-2"
                                  Style="max-width: 300px;" />
                    <MudSwitch @bind-Value="_onlyDefault"
                               Label="@TranslationService.GetTranslation("pricelist.onlyDefault", "Solo Default")"
                               Color="Color.Primary"
                               Class="mr-2" />
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               StartIcon="@Icons.Material.Outlined.Add"
                               OnClick="@OpenCreateDialog"
                               Disabled="_isLoadingData">
                        @TranslationService.GetTranslation("pricelist.create", "Nuovo Listino")
                    </MudButton>
                    <MudButton Variant="Variant.Outlined"
                               Color="Color.Success"
                               StartIcon="@Icons.Material.Filled.PriceChange"
                               OnClick="@OpenGenerateFromDefaultPricesDialog"
                               Disabled="_isLoadingData">
                        @TranslationService.GetTranslation("pricelist.generateFromDefaults", "Da Prezzi Default")
                    </MudButton>
                    <MudButton Variant="Variant.Outlined"
                               Color="Color.Secondary"
                               StartIcon="@Icons.Material.Outlined.AutoAwesome"
                               OnClick="@OpenGenerateFromDocumentsDialog"
                               Disabled="_isLoadingData">
                        @TranslationService.GetTranslation("pricelist.generateFromDocuments", "Genera da Documenti")
                    </MudButton>
                    @if (_selectedItems.Count > 0)
                    {
                        <MudButton Variant="Variant.Text"
                                   Color="Color.Success"
                                   StartIcon="@Icons.Material.Outlined.CheckCircle"
                                   OnClick="@BulkActivate"
                                   Disabled="_isLoadingData">
                            @TranslationService.GetTranslation("pricelist.bulkActivate", "Attiva") (@_selectedItems.Count)
                        </MudButton>
                        <MudButton Variant="Variant.Text"
                                   Color="Color.Warning"
                                   StartIcon="@Icons.Material.Outlined.Pause"
                                   OnClick="@BulkSuspend"
                                   Disabled="_isLoadingData">
                            @TranslationService.GetTranslation("pricelist.bulkSuspend", "Sospendi") (@_selectedItems.Count)
                        </MudButton>
                        <MudButton Variant="Variant.Text"
                                   Color="Color.Error"
                                   StartIcon="@Icons.Material.Outlined.Delete"
                                   OnClick="@BulkDelete"
                                   Disabled="_isLoadingData">
                            @TranslationService.GetTranslation("common.delete", "Elimina") (@_selectedItems.Count)
                        </MudButton>
                    }
                    <MudIconButton Icon="@Icons.Material.Outlined.Refresh"
                                   Color="Color.Default"
                                   OnClick="@LoadDataAsync"
                                   Disabled="_isLoadingData" />
                </ToolBarContent>
                <HeaderContent Context="columnConfigurations">
                    @foreach (var column in columnConfigurations.Where(c => c.IsVisible).OrderBy(c => c.Order))
                    {
                        @if (column.PropertyName == "Name")
                        {
                            <EFTableColumnHeader TItem="PriceListDto" PropertyName="Name" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<PriceListDto, object>(x => x.Name))">@TranslationService.GetTranslation("field.name", "Nome")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "Code")
                        {
                            <EFTableColumnHeader TItem="PriceListDto" PropertyName="Code" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<PriceListDto, object>(x => x.Code ?? string.Empty))">@TranslationService.GetTranslation("field.code", "Codice")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "Type")
                        {
                            <EFTableColumnHeader TItem="PriceListDto" PropertyName="Type" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<PriceListDto, object>(x => x.Type))">@TranslationService.GetTranslation("pricelist.type", "Tipo")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "Status")
                        {
                            <EFTableColumnHeader TItem="PriceListDto" PropertyName="Status" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<PriceListDto, object>(x => x.Status))">@TranslationService.GetTranslation("common.status", "Stato")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "Priority")
                        {
                            <EFTableColumnHeader TItem="PriceListDto" PropertyName="Priority" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<PriceListDto, object>(x => x.Priority))">@TranslationService.GetTranslation("field.priority", "Priorità")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "ValidFrom")
                        {
                            <EFTableColumnHeader TItem="PriceListDto" PropertyName="ValidFrom" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<PriceListDto, object>(x => x.ValidFrom ?? DateTime.MinValue))">@TranslationService.GetTranslation("field.validFrom", "Valido Da")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "ValidTo")
                        {
                            <EFTableColumnHeader TItem="PriceListDto" PropertyName="ValidTo" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<PriceListDto, object>(x => x.ValidTo ?? DateTime.MaxValue))">@TranslationService.GetTranslation("field.validTo", "Valido Fino")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "EntryCount")
                        {
                            <EFTableColumnHeader TItem="PriceListDto" PropertyName="EntryCount" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<PriceListDto, object>(x => x.EntryCount))">@TranslationService.GetTranslation("field.products", "Prodotti")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                    }
                    <MudTh Class="text-center" Style="min-width:120px;">@TranslationService.GetTranslation("common.actions", "Azioni")</MudTh>
                </HeaderContent>

                <RowTemplate Context="item">
                    @{
                        var visibleColumns = _efTable?.ColumnConfigurations?.Where(c => c.IsVisible).OrderBy(c => c.Order).ToList() ?? _initialColumns.Where(c => c.IsVisible).OrderBy(c => c.Order).ToList();
                    }
                    @foreach (var column in visibleColumns)
                    {
                        @if (column.PropertyName == "Name")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.name", "Nome")">
                                <div class="d-flex align-center">
                                    @if (item.IsDefault)
                                    {
                                        <MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Warning" Size="Size.Small" Class="mr-2" />
                                    }
                                    <div>
                                        <MudText Typo="Typo.body2">@item.Name</MudText>
                                        @if (!string.IsNullOrEmpty(item.Code))
                                        {
                                            <MudText Typo="Typo.caption" Class="mud-text-secondary">@item.Code</MudText>
                                        }
                                    </div>
                                </div>
                            </MudTd>
                        }
                        else if (column.PropertyName == "Code")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.code", "Codice")">
                                <MudText Typo="Typo.body2">@(item.Code ?? "-")</MudText>
                            </MudTd>
                        }
                        else if (column.PropertyName == "Type")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("pricelist.type", "Tipo")">
                                <MudChip T="string" Size="Size.Small" Color="@GetTypeColor(item.Type)">
                                    @TranslationService.GetTranslation($"pricelist.type.{item.Type.ToString().ToLower()}", item.Type.ToString())
                                </MudChip>
                            </MudTd>
                        }
                        else if (column.PropertyName == "Status")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("common.status", "Stato")">
                                <MudChip T="string" Size="Size.Small" Color="@GetStatusColor(item.Status)" Icon="@GetStatusIcon(item.Status)">
                                    @TranslationService.GetTranslation($"common.{item.Status.ToString().ToLower()}", item.Status.ToString())
                                </MudChip>
                            </MudTd>
                        }
                        else if (column.PropertyName == "Priority")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.priority", "Priorità")">
                                <MudChip T="string" Size="Size.Small" Color="@GetPriorityColor(item.Priority)">
                                    @item.Priority
                                </MudChip>
                            </MudTd>
                        }
                        else if (column.PropertyName == "ValidFrom")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.validFrom", "Valido Da")">
                                @if (item.ValidFrom.HasValue)
                                {
                                    <MudText Typo="Typo.body2">@item.ValidFrom.Value.ToShortDateString()</MudText>
                                }
                                else
                                {
                                    <MudText Typo="Typo.body2">-</MudText>
                                }
                            </MudTd>
                        }
                        else if (column.PropertyName == "ValidTo")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.validTo", "Valido Fino")">
                                <div class="d-flex align-center">
                                    @if (item.ValidTo.HasValue)
                                    {
                                        @if (GetValidityStatus(item) == "expired")
                                        {
                                            <MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" Size="Size.Small" Class="mr-1" />
                                        }
                                        else if (GetValidityStatus(item) == "expiring")
                                        {
                                            <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" Size="Size.Small" Class="mr-1" />
                                        }
                                        <MudText Typo="Typo.body2">@item.ValidTo.Value.ToShortDateString()</MudText>
                                    }
                                    else
                                    {
                                        <MudText Typo="Typo.body2">-</MudText>
                                    }
                                </div>
                            </MudTd>
                        }
                        else if (column.PropertyName == "EntryCount")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.products", "Prodotti")">
                                <MudChip T="string" Size="Size.Small" Icon="@Icons.Material.Outlined.Inventory">
                                    @item.EntryCount
                                </MudChip>
                            </MudTd>
                        }
                    }
                    <MudTd DataLabel="@TranslationService.GetTranslation("common.actions", "Azioni")" Class="text-center">
                        <ActionButtonGroup EntityName="@item.Name"
                                           ItemDisplayName="@item.Name"
                                           ShowView="false"
                                           ShowEdit="true"
                                           ShowAuditLog="false"
                                           ShowToggleStatus="false"
                                           ShowDelete="true"
                                           OnEdit="@(() => EditItem(item))"
                                           OnDelete="@(() => DeleteItem(item))" />
                    </MudTd>
                </RowTemplate>

                <NoRecordsContent>
                    <div class="text-center pa-2 pa-sm-3 pa-md-4">
                        <MudIcon Icon="@Icons.Material.Outlined.PriceCheck" Size="Size.Medium" Class="mb-4 mud-text-secondary" />
                        <MudText Typo="Typo.h6" Class="mb-2">
                            @(_items.Any() ?
                                TranslationService.GetTranslation("pricelist.noMatchFilters", "Nessun listino corrisponde ai filtri applicati") :
                                TranslationService.GetTranslation("pricelist.noFound", "Nessun listino trovato"))
                        </MudText>
                        @if (_items.Any())
                        {
                            <MudButton Variant="Variant.Text"
                                       Color="Color.Primary"
                                       StartIcon="@Icons.Material.Outlined.Clear"
                                       OnClick="@ClearFilters">
                                @TranslationService.GetTranslation("common.clearFilters", "Cancella filtri")
                            </MudButton>
                        }
                    </div>
                </NoRecordsContent>
            </EFTable>
        </div>
    </div>
}

@code {
    // UI State Management
    private bool _isLoading = true;
    private bool _isLoadingData = false;

    // Filter and search state
    private string _searchTerm = string.Empty;
    private bool _onlyDefault = false;
    private CancellationTokenSource? _searchDebounceCts;
    
    // Quick Filters
    private List<QuickFilter<PriceListDto>> _quickFilters = new()
    {
        new() { Id = "all", Label = "Tutti", Predicate = _ => true, Description = "Mostra tutti i listini" },
        new() { Id = "active", Label = "Attivi", Predicate = pl => pl.Status == PriceListStatus.Active, Color = Color.Success, Icon = Icons.Material.Outlined.CheckCircle, Description = "Listini attivi" },
        new() { Id = "suspended", Label = "Sospesi", Predicate = pl => pl.Status == PriceListStatus.Suspended, Color = Color.Warning, Icon = Icons.Material.Outlined.Pause, Description = "Listini sospesi" },
        new() { Id = "default", Label = "Predefiniti", Predicate = pl => pl.IsDefault, Color = Color.Primary, Icon = Icons.Material.Outlined.Star, Description = "Listini predefiniti" },
        new() { Id = "selling", Label = "Vendita", Predicate = pl => pl.Type == PriceListType.Sales, Color = Color.Primary, Icon = Icons.Material.Outlined.Sell, Description = "Listini di vendita" },
        new() { Id = "purchase", Label = "Acquisto", Predicate = pl => pl.Type == PriceListType.Purchase, Color = Color.Secondary, Icon = Icons.Material.Outlined.ShoppingCart, Description = "Listini di acquisto" }
    };
    
    private QuickFilter<PriceListDto>? _activeQuickFilter;

    // Data collections
    private List<PriceListDto> _items = new();
    private HashSet<PriceListDto> _selectedItems = new();

    // EFTable reference
    private EFTable<PriceListDto> _efTable = null!;

    // Column configuration for EFTable
    private List<EFTableColumnConfiguration> _initialColumns = new()
    {
        new() { PropertyName = "Name", DisplayName = "Nome", IsVisible = true, Order = 0, IsSearchable = true },
        new() { PropertyName = "Code", DisplayName = "Codice", IsVisible = true, Order = 1, IsSearchable = true },
        new() { PropertyName = "Type", DisplayName = "Tipo", IsVisible = true, Order = 2, IsSearchable = false },
        new() { PropertyName = "Status", DisplayName = "Stato", IsVisible = true, Order = 3, IsSearchable = false },
        new() { PropertyName = "Priority", DisplayName = "Priorità", IsVisible = true, Order = 4, IsSearchable = false },
        new() { PropertyName = "ValidFrom", DisplayName = "Valido Da", IsVisible = true, Order = 5, IsSearchable = false },
        new() { PropertyName = "ValidTo", DisplayName = "Valido Fino", IsVisible = true, Order = 6, IsSearchable = false },
        new() { PropertyName = "EntryCount", DisplayName = "Prodotti", IsVisible = true, Order = 7, IsSearchable = false },
        new() { PropertyName = "IsDefault", DisplayName = "Default", IsVisible = false, Order = 8, IsSearchable = false },
        new() { PropertyName = "Direction", DisplayName = "Direzione", IsVisible = false, Order = 9, IsSearchable = false },
    };

    private EventCallback<HashSet<PriceListDto>> _selectedItemsChangedCallback => EventCallback.Factory.Create<HashSet<PriceListDto>>(this, OnSelectedItemsChanged);

    /// <summary>
    /// Computed property for filtered items based on search criteria.
    /// </summary>
    private IEnumerable<PriceListDto> _filteredItems
    {
        get
        {
            var filtered = _items.AsEnumerable();

            // Apply Quick Filter first
            if (_activeQuickFilter != null && _activeQuickFilter.Predicate != null)
            {
                filtered = filtered.Where(p => _activeQuickFilter.Predicate(p));
            }

            // Configurable multi-column search
            if (!string.IsNullOrEmpty(_searchTerm))
            {
                filtered = filtered.Where(p =>
                    p.MatchesSearchInColumns(
                        _searchTerm,
                        _initialColumns.Where(c => c.IsSearchable).Select(c => c.PropertyName)));
            }

            // Only default filter
            if (_onlyDefault)
            {
                filtered = filtered.Where(p => p.IsDefault);
            }

            return filtered;
        }
    }

    /// <summary>
    /// Handles selection changes from EFTable
    /// </summary>
    private void OnSelectedItemsChanged(HashSet<PriceListDto> items)
    {
        _selectedItems = items;
        StateHasChanged();
    }

    /// <summary>
    /// Handles row click - navigates to price list detail page
    /// </summary>
    private void HandleRowClick(TableRowClickEventArgs<PriceListDto> args)
    {
        // Ctrl+Click or Cmd+Click opens in new tab
        if (args.MouseEventArgs.CtrlKey || args.MouseEventArgs.MetaKey)
        {
            JSRuntime.InvokeVoidAsync("open", $"/management/pricelists/{args.Item.Id}", "_blank");
            return;
        }

        // Normal click navigates in same tab
        NavigationManager.NavigateTo($"/management/pricelists/{args.Item.Id}");
    }

    /// <summary>
    /// Component initialization.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Check authentication
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            if (!isAuthenticated)
            {
                await ShowLoginDialogAsync();
                return;
            }

            // Load data
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add(TranslationService.GetTranslation("messages.loadingPageError", "Errore nel caricamento della pagina: {0}", ex.Message), Severity.Error);
            Logger.LogError(ex, "Error loading price lists page");
        }
        finally
        {
            _isLoading = false;
        }
    }

    /// <summary>
    /// Loads price list data.
    /// </summary>
    private async Task LoadDataAsync()
    {
        try
        {
            _isLoadingData = true;

            // Using a reasonable page size for initial load
            var result = await PriceListService.GetPagedAsync(1, 100, CancellationToken.None);
            _items = result.Items.ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add(TranslationService.GetTranslation("pricelist.loadingError", "Errore nel caricamento dei listini: {0}", ex.Message), Severity.Error);
            Logger.LogError(ex, "Error loading price lists");
        }
        finally
        {
            _isLoadingData = false;
        }
    }

    /// <summary>
    /// Handles Quick Filter selection.
    /// </summary>
    private void HandleQuickFilter(QuickFilter<PriceListDto>? filter)
    {
        _activeQuickFilter = filter;
        StateHasChanged();
    }

    /// <summary>
    /// Clears all active filters.
    /// </summary>
    private void ClearFilters()
    {
        _searchTerm = string.Empty;
        _onlyDefault = false;
        _activeQuickFilter = null;
        StateHasChanged();
    }

    private async Task OnSearchChanged()
    {
        // Cancel previous debounce if any
        _searchDebounceCts?.Cancel();
        _searchDebounceCts = new CancellationTokenSource();
        var token = _searchDebounceCts.Token;

        try
        {
            await Task.Delay(300, token); // Debounce with cancellation
            if (!token.IsCancellationRequested)
            {
                StateHasChanged();
            }
        }
        catch (TaskCanceledException)
        {
            // Expected when debounce is cancelled
        }
    }

    private void OnFilterChanged()
    {
        StateHasChanged();
    }

    private Color GetTypeColor(PriceListType type) => type switch
    {
        PriceListType.Sales => Color.Primary,
        PriceListType.Purchase => Color.Info,
        _ => Color.Default
    };

    private Color GetStatusColor(PriceListStatus status) => status switch
    {
        PriceListStatus.Active => Color.Success,
        PriceListStatus.Suspended => Color.Warning,
        _ => Color.Default
    };

    private string GetStatusIcon(PriceListStatus status) => status switch
    {
        PriceListStatus.Active => Icons.Material.Filled.CheckCircle,
        PriceListStatus.Suspended => Icons.Material.Filled.Pause,
        _ => Icons.Material.Filled.Circle
    };

    private Color GetPriorityColor(int priority) => priority switch
    {
        <= 10 => Color.Error,      // High priority (red)
        <= 50 => Color.Warning,    // Medium priority (yellow)
        _ => Color.Info            // Low priority (blue)
    };

    private string GetValidityStatus(PriceListDto item)
    {
        if (!item.ValidTo.HasValue) return "valid";

        var now = DateTime.Now;
        var daysUntilExpiry = (item.ValidTo.Value - now).TotalDays;

        if (daysUntilExpiry < 0) return "expired";
        if (daysUntilExpiry <= 7) return "expiring";
        if (item.ValidFrom.HasValue && item.ValidFrom.Value > now) return "future";

        return "valid";
    }

    private async Task OpenCreateDialog()
    {
        var dialog = await DialogService.ShowAsync<CreatePriceListDialog>(
            TranslationService.GetTranslation("pricelist.create", "Nuovo Listino"),
            new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true, CloseButton = true });

        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await LoadDataAsync();
        }
    }

    private async Task OpenGenerateFromDocumentsDialog()
    {
        var dialog = await DialogService.ShowAsync<GeneratePriceListFromDocumentsDialog>(
            TranslationService.GetTranslation("pricelist.generateFromDocuments", "Genera da Documenti"),
            new DialogOptions { MaxWidth = MaxWidth.Large, FullWidth = true, CloseButton = true });

        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await LoadDataAsync();
        }
    }

    private async Task OpenGenerateFromDefaultPricesDialog()
    {
        var dialog = await DialogService.ShowAsync<GenerateFromDefaultPricesDialog>(
            TranslationService.GetTranslation("pricelist.generateFromDefaults", "Genera Listino da Prezzi Default"),
            new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true, CloseButton = true });

        var result = await dialog.Result;
        if (!result.Canceled && result.Data != null)
        {
            await LoadDataAsync();
            Snackbar.Add(
                TranslationService.GetTranslation("pricelist.generatedSuccess", "Listino generato con successo"), 
                Severity.Success);
        }
    }

    private void EditItem(PriceListDto item)
    {
        // Navigate to detail page
        NavigationManager.NavigateTo($"/management/pricelists/{item.Id}");
    }

    private void DuplicateItem(PriceListDto item)
    {
        // TODO: Implement duplicate functionality
        Snackbar.Add(TranslationService.GetTranslation("common.notImplemented", "Funzionalità non ancora implementata"), Severity.Info);
    }

    private async Task DeleteItem(PriceListDto item)
    {
        var parameters = new DialogParameters<ConfirmationDialog>
        {
            { x => x.ContentText, TranslationService.GetTranslation("pricelist.deleteConfirm", "Sei sicuro di voler eliminare il listino '{0}'? Questa operazione non può essere annullata.", item.Name) },
            { x => x.ButtonText, TranslationService.GetTranslation("common.delete", "Elimina") },
            { x => x.Color, Color.Error }
        };

        var dialog = await DialogService.ShowAsync<ConfirmationDialog>(
            TranslationService.GetTranslation("common.confirmDeletion", "Conferma eliminazione"),
            parameters);

        var result = await dialog.Result;

        if (!result.Canceled)
        {
            try
            {
                var deleted = await PriceListService.DeleteAsync(item.Id, CancellationToken.None);
                if (deleted)
                {
                    Snackbar.Add(TranslationService.GetTranslation("pricelist.deleted", "Listino eliminato con successo"), Severity.Success);
                    await LoadDataAsync();
                }
                else
                {
                    Snackbar.Add(TranslationService.GetTranslation("pricelist.deleteNotFound", "Listino non trovato"), Severity.Warning);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslation("pricelist.deleteError", "Errore durante l'eliminazione: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error deleting price list {Id}", item.Id);
            }
        }
    }

    private async Task BulkActivate()
    {
        // TODO: Implement bulk activate functionality
        Snackbar.Add(TranslationService.GetTranslation("common.notImplemented", "Funzionalità non ancora implementata"), Severity.Info);
        await Task.CompletedTask;
    }

    private async Task BulkSuspend()
