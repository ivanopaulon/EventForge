@page "/product-management/products"
@using Microsoft.AspNetCore.Authorization
@using EventForge.DTOs.Products
@using EventForge.DTOs.Common
@using EventForge.Client.Shared.Components
@using EventForge.Client.Shared.Components.Dashboard
@attribute [Authorize]
@inject IAuthService AuthService
@inject IProductService ProductService
@inject NavigationManager NavigationManager
@inject IAuthenticationDialogService AuthenticationDialogService
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inject ITranslationService TranslationService
@inject ILogger<ProductManagement> Logger

<PageLoadingOverlay Visible="_isLoading || _isLoadingBrands"
                     Message="@(_isLoading ? TranslationService.GetTranslation("messages.loadingPage", "Caricamento pagina...") : TranslationService.GetTranslation("common.loading", "Caricamento..."))" />

@if (!_isLoading)
{
    <div class="brand-page-root">
        <div class="brand-top">
            <ManagementDashboard TItem="ProductDto"
                                 Items="_filteredBrands"
                                 Metrics="_dashboardMetrics"
                                 EntityType="Product"
                                 AllowConfiguration="true"
                                 UseServerSide="false" />
        </div>

        <div class="eftable-wrapper">
            <EFTable @ref="_efTable"
                 TItem="ProductDto"
                 Items="_filteredBrands"
                 MultiSelection="true"
                 SelectedItems="_selectedProducts"
                 SelectedItemsChanged="_selectedItemsChangedCallback"
                 IsLoading="_isLoadingBrands"
                 ComponentKey="ProductManagement"
                 InitialColumnConfigurations="_initialColumns"
                 AllowDragDropGrouping="true">
            <ToolBarContent>
                <MudText Typo="Typo.h5">
                    @TranslationService.GetTranslation("product.management", "Gestione Prodotti")
                </MudText>
                <MudSpacer />
                <MudTextField @bind-Value="_searchTerm"
                              @bind-Value:after="OnSearchChanged"
                              Label="@TranslationService.GetTranslation("product.search", "Cerca prodotti")"
                              Placeholder="@TranslationService.GetTranslation("product.searchPlaceholder", "Inserisci nome...")"
                              Variant="Variant.Outlined"
                              Adornment="Adornment.End"
                              AdornmentIcon="@Icons.Material.Outlined.Search"
                              Clearable="true"
                              Class="ef-input" />
                <ManagementTableToolbar ShowSelectionBadge="true"
                                        SelectedCount="@_selectedProducts.Count"
                                        ShowRefresh="true"
                                        ShowCreate="true"
                                        ShowDelete="true"
                                        CreateTooltip="product.createNew"
                                        IsDisabled="_isLoadingBrands"
                                        OnRefresh="@LoadBrandsAsync"
                                        OnCreate="@CreateProduct"
                                        OnDelete="@DeleteSelectedBrands" />
            </ToolBarContent>
            <HeaderContent Context="columnConfigurations">
                @foreach (var column in columnConfigurations.Where(c => c.IsVisible).OrderBy(c => c.Order))
                {
                    @if (column.PropertyName == "Code")
                    {
                        <EFTableColumnHeader TItem="ProductDto" PropertyName="Code" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel SortBy="@(new Func<ProductDto, object>(x => x.Code))">@TranslationService.GetTranslation("field.code", "Codice")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                    else if (column.PropertyName == "Name")
                    {
                        <EFTableColumnHeader TItem="ProductDto" PropertyName="Name" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel SortBy="@(new Func<ProductDto, object>(x => x.Name))">@TranslationService.GetTranslation("field.name", "Nome")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                    else if (column.PropertyName == "ShortDescription")
                    {
                        <EFTableColumnHeader TItem="ProductDto" PropertyName="ShortDescription" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel SortBy="@(new Func<ProductDto, object>(x => x.ShortDescription ?? string.Empty))">@TranslationService.GetTranslation("field.description", "Descrizione")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                    else if (column.PropertyName == "DefaultPrice")
                    {
                        <EFTableColumnHeader TItem="ProductDto" PropertyName="DefaultPrice" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel SortBy="@(new Func<ProductDto, object>(x => x.DefaultPrice ?? 0))">@TranslationService.GetTranslation("field.price", "Prezzo")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                }
                <MudTh Class="text-center" Style="min-width:120px;">@TranslationService.GetTranslation("common.actions", "Azioni")</MudTh>
            </HeaderContent>

            <RowTemplate Context="item">
                @{
                    var visibleColumns = _efTable?.ColumnConfigurations?.Where(c => c.IsVisible).OrderBy(c => c.Order).ToList() ?? _initialColumns.Where(c => c.IsVisible).OrderBy(c => c.Order).ToList();
                }
                @foreach (var column in visibleColumns)
                {
                    @if (column.PropertyName == "Code")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("field.code", "Codice")">
                            <MudChip T="string" Size="Size.Small" Color="Color.Primary" Variant="Variant.Outlined">
                                @item.Code
                            </MudChip>
                        </MudTd>
                    }
                    else if (column.PropertyName == "Name")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("field.name", "Nome")">
                            <div class="d-flex align-center">
                                <MudAvatar Color="Color.Primary" Size="Size.Small" Class="mr-2">
                                    <MudIcon Icon="@Icons.Material.Outlined.Inventory2" />
                                </MudAvatar>
                                <div>
                                    <MudText Typo="Typo.body2">@item.Name</MudText>
                                    <MudText Typo="Typo.caption" Class="mud-text-secondary">ID: @(item.Id.ToString()[..Math.Min(8, item.Id.ToString().Length)])...</MudText>
                                </div>
                            </div>
                        </MudTd>
                    }
                    else if (column.PropertyName == "ShortDescription")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("field.description", "Descrizione")">
                            <MudText Typo="Typo.body2" Class="text-truncate" Style="max-width:400px;">
                                @(string.IsNullOrEmpty(item.ShortDescription) ? "-" : item.ShortDescription)
                            </MudText>
                        </MudTd>
                    }
                    else if (column.PropertyName == "DefaultPrice")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("field.price", "Prezzo")" Style="text-align:right;">
                            @if (item.DefaultPrice.HasValue)
                            {
                                <MudText Typo="Typo.body2" Style="font-weight:600;">@item.DefaultPrice.Value.ToString("C2")</MudText>
                            }
                            else
                            {
                                <MudText Typo="Typo.body2">-</MudText>
                            }
                        </MudTd>
                    }
                }
                <MudTd DataLabel="@TranslationService.GetTranslation("common.actions", "Azioni")" Class="text-center">
                    <ActionButtonGroup EntityName="@item.Name"
                                       ItemDisplayName="@item.Name"
                                       ShowView="false"
                                       ShowEdit="true"
                                       ShowAuditLog="true"
                                       ShowToggleStatus="false"
                                       ShowDelete="true"
                                       OnEdit="@(() => EditBrand(item.Id))"
                                       OnAuditLog="@(() => ViewBrandAuditLog(item))"
                                       OnDelete="@(() => DeleteBrand(item))" />
                </MudTd>
            </RowTemplate>

            <NoRecordsContent>
                <div class="text-center pa-2 pa-sm-3 pa-md-4">
                    <MudIcon Icon="@Icons.Material.Outlined.Inventory2" Size="Size.Medium" Class="mb-4 mud-text-secondary" />
                    <MudText Typo="Typo.h6" Class="mb-2">
                        @(_products.Any() ?
                                            TranslationService.GetTranslation("product.noBrandsMatchFilters", "Nessun prodottio corrisponde ai filtri applicati") :
                                            TranslationService.GetTranslation("product.noBrandsFound", "Nessun prodottio trovato"))
                    </MudText>
                    @if (_products.Any())
                    {
                        <MudButton Variant="Variant.Text"
                                   Color="Color.Primary"
                                   StartIcon="@Icons.Material.Outlined.Clear"
                                   OnClick="@ClearFilters">
                            @TranslationService.GetTranslation("action.clearFilters", "Cancella filtri")
                        </MudButton>
                    }
                </div>
            </NoRecordsContent>
            </EFTable>
        </div>
    </div>
}

@code {
    // Dialog options for fullscreen audit dialog
    private readonly DialogOptions _auditDialogOptions = new() 
    { 
        FullScreen = true, 
        CloseButton = true,
        MaxWidth = MaxWidth.False
    };
    
    // UI State Management
    private bool _isLoading = true;
    private bool _isLoadingBrands = false;

    // Filter and search state
    private string _searchTerm = string.Empty;
    private CancellationTokenSource? _searchDebounceCts;

    // Data collections
    private List<ProductDto> _products = new();
    private HashSet<ProductDto> _selectedProducts = new();

    // EFTable reference
    private EFTable<ProductDto> _efTable = null!;

    // Column configuration for EFTable
    private List<EFTableColumnConfiguration> _initialColumns = new()
    {
        new() { PropertyName = "Code", DisplayName = "Codice", IsVisible = true, Order = 0 },
        new() { PropertyName = "Name", DisplayName = "Nome", IsVisible = true, Order = 1 },
        new() { PropertyName = "ShortDescription", DisplayName = "Descrizione", IsVisible = true, Order = 2 },
        new() { PropertyName = "DefaultPrice", DisplayName = "Prezzo", IsVisible = true, Order = 3 }
    };

    // Dashboard configuration
    private List<DashboardMetric<ProductDto>> _dashboardMetrics = new()
    {
        new()
        {
            Title = "Totale Prodotti",
            Type = MetricType.Count,
            Icon = Icons.Material.Outlined.Inventory2,
            Color = "primary",
            Description = "Numero totale di prodotti",
            Format = "N0"
        },
        new()
        {
            Title = "Prodotti Attivi",
            Type = MetricType.Count,
            Filter = p => p.Status == ProductStatus.Active,
            Icon = Icons.Material.Outlined.CheckCircle,
            Color = "success",
            Description = "Prodotti attivi",
            Format = "N0"
        },
        new()
        {
            Title = "Con Immagini",
            Type = MetricType.Count,
            Filter = p => p.ImageDocumentId != null,
            Icon = Icons.Material.Outlined.Image,
            Color = "info",
            Description = "Prodotti con immagini",
            Format = "N0"
        },
        new()
        {
            Title = "Ultimi Aggiunti",
            Type = MetricType.Count,
            Filter = p => p.CreatedAt >= DateTime.Now.AddDays(-30),
            Icon = Icons.Material.Outlined.NewReleases,
            Color = "warning",
            Description = "Prodotti aggiunti negli ultimi 30 giorni",
            Format = "N0"
        }
    };

    private EventCallback<HashSet<ProductDto>> _selectedItemsChangedCallback => EventCallback.Factory.Create<HashSet<ProductDto>>(this, OnSelectedItemsChanged);

    /// <summary>
    /// Computed property for filtered brands based on search criteria.
    /// </summary>
    private IEnumerable<ProductDto> _filteredBrands => 
        _products.Where(b => 
            // Search filter: check name, description, and country
            (string.IsNullOrEmpty(_searchTerm) || 
             b.Name.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
             (b.Description != null && b.Description.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)) ||
             (b.Country != null && b.Country.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase))));

    /// <summary>
    /// Handles selection changes from EFTable
    /// </summary>
    private void OnSelectedItemsChanged(HashSet<ProductDto> items)
    {
        _selectedProducts = items;
        StateHasChanged();
    }

    /// <summary>
    /// Component initialization.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Check authentication
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            if (!isAuthenticated)
            {
                await ShowLoginDialogAsync();
                return;
            }

            // Load brands
            await LoadBrandsAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add(TranslationService.GetTranslation("product.loadingPageError", "Errore nel caricamento della pagina: {0}", ex.Message), Severity.Error);
            Logger.LogError(ex, "Error loading brands page");
        }
        finally
        {
            _isLoading = false;
        }
    }

    /// <summary>
    /// Loads brand data.
    /// </summary>
    private async Task LoadBrandsAsync()
    {
        try
        {
            _isLoadingBrands = true;
            var result = await ProductService.GetBrandsAsync(page: 1, pageSize: 100);
            _products = result.Items?.ToList() ?? new List<ProductDto>();
        }
        catch (Exception ex)
        {
            Snackbar.Add(TranslationService.GetTranslation("product.loadingBrandsError", "Errore nel caricamento dei prodotti: {0}", ex.Message), Severity.Error);
            Logger.LogError(ex, "Error loading brands");
        }
        finally
        {
            _isLoadingBrands = false;
        }
    }

    /// <summary>
    /// Clears all active filters.
    /// </summary>
    private void ClearFilters()
    {
        _searchTerm = string.Empty;
        StateHasChanged();
    }

    private async Task OnSearchChanged()
    {
        // Cancel previous debounce if any
        _searchDebounceCts?.Cancel();
        _searchDebounceCts = new CancellationTokenSource();
        var token = _searchDebounceCts.Token;
        
        try
        {
            await Task.Delay(300, token); // Debounce with cancellation
            if (!token.IsCancellationRequested)
            {
                StateHasChanged();
            }
        }
        catch (OperationCanceledException)
        {
            // Swallow cancellation
        }
    }

    private void CreateBrand()
    {
        NavigationManager.NavigateTo("/product-management/brands/new");
    }

    private void EditBrand(Guid id)
    {
        NavigationManager.NavigateTo($"/product-management/brands/{id}");
    }

    private async Task DeleteBrand(ProductDto brand)
    {
        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslation("product.confirmDelete", 
            "Sei sicuro di voler eliminare il prodottio '{0}'? Questa azione non può essere annullata.", 
            product.Name);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.delete", "Elimina"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                await ProductService.DeleteBrandAsync(product.Id);
                _products.Remove(brand);
                Snackbar.Add(TranslationService.GetTranslation("product.brandDeleted", "Prodottio eliminato con successo!"), Severity.Success);
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslation("product.deleteBrandError", 
                    "Errore nell'eliminazione del prodottio: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error deleting brand {BrandId}", product.Id);
            }
        }
    }

    /// <summary>
    /// Opens the audit log dialog for a brand using IDialogService.
    /// </summary>
    private async Task ViewBrandAuditLog(ProductDto brand)
    {
        var parameters = new DialogParameters<AuditHistoryDialog>
        {
            { x => x.EntityType, "Product" },
            { x => x.EntityId, product.Id },
            { x => x.EntityName, product.Name }
        };

        await DialogService.ShowAsync<AuditHistoryDialog>(
            TranslationService.GetTranslation("audit.historyDialog.title", "Cronologia Modifiche"),
            parameters,
            _auditDialogOptions);
    }

    /// <summary>
    /// Deletes all selected brands.
    /// </summary>
    private async Task DeleteSelectedBrands()
    {
        if (_selectedProducts.Count == 0)
            return;

        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslationFormatted("product.confirmDeleteMultiple", 
            "Sei sicuro di voler eliminare {0} prodotti selezionati? Questa azione non può essere annullata.", 
            _selectedProducts.Count);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.delete", "Elimina"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                var deletedCount = 0;
                var failedCount = 0;
                
                foreach (var brand in _selectedProducts.ToList())
                {
                    try
                    {
                        await ProductService.DeleteBrandAsync(product.Id);
                        _products.RemoveAll(b => b.Id == product.Id);
                        deletedCount++;
                    }
                    catch (Exception ex)
                    {
                        failedCount++;
                        Logger.LogError(ex, "Error deleting brand {BrandId}", product.Id);
                    }
                }
                
                _selectedProducts.Clear();
                
                if (failedCount == 0)
                {
                    Snackbar.Add(TranslationService.GetTranslationFormatted("product.deletedMultiple", 
                        "{0} prodotti eliminati con successo!", deletedCount), Severity.Success);
                }
                else
                {
                    Snackbar.Add(TranslationService.GetTranslationFormatted("product.deletedMultiplePartial", 
                        "{0} prodotti eliminati, {1} falliti", deletedCount, failedCount), Severity.Warning);
                }
                
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslationFormatted("product.deleteError", 
                    "Errore nell'eliminazione dei prodotti: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error deleting selected brands");
            }
        }
    }

    private async Task ShowLoginDialogAsync()
    {
        var result = await AuthenticationDialogService.ShowLoginDialogAsync();
        if (result)
        {
            // Reload the page after successful login
            await OnInitializedAsync();
        }
    }
}
