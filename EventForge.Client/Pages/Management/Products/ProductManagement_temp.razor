@using Microsoft.AspNetCore.Authorization
@using EventForge.DTOs.Products
@using EventForge.DTOs.Common
@using EventForge.Client.Shared.Components
@using EventForge.Client.Shared.Components.Dashboard
@attribute [Authorize]
@inject IAuthService AuthService
@inject IBrandService BrandService
@inject NavigationManager NavigationManager
@inject IAuthenticationDialogService AuthenticationDialogService
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inject ITranslationService TranslationService
@inject ILogger<BrandManagement> Logger

<PageLoadingOverlay Visible="_isLoading || _isLoadingBrands"
                     Message="@(_isLoading ? TranslationService.GetTranslation("messages.loadingPage", "Caricamento pagina...") : TranslationService.GetTranslation("common.loading", "Caricamento..."))" />

@if (!_isLoading)
{
    <div class="brand-page-root">
        <div class="brand-top">
            <ManagementDashboard TItem="BrandDto"
                                 Items="_filteredBrands"
                                 Metrics="_dashboardMetrics"
                                 EntityType="Brand"
                                 AllowConfiguration="true"
                                 UseServerSide="false" />
        </div>

        <div class="eftable-wrapper">
            <EFTable @ref="_efTable"
                 TItem="BrandDto"
                 Items="_filteredBrands"
                 MultiSelection="true"
                 SelectedItems="_selectedBrands"
                 SelectedItemsChanged="_selectedItemsChangedCallback"
                 IsLoading="_isLoadingBrands"
                 ComponentKey="BrandManagement"
                 InitialColumnConfigurations="_initialColumns"
                 AllowDragDropGrouping="true">
            <ToolBarContent>
                <MudText Typo="Typo.h5">
                    @TranslationService.GetTranslation("brand.management", "Gestione Marchi")
                </MudText>
                <MudSpacer />
                <MudTextField @bind-Value="_searchTerm"
                              @bind-Value:after="OnSearchChanged"
                              Label="@TranslationService.GetTranslation("brand.search", "Cerca marchi")"
                              Placeholder="@TranslationService.GetTranslation("brand.searchPlaceholder", "Inserisci nome...")"
                              Variant="Variant.Outlined"
                              Adornment="Adornment.End"
                              AdornmentIcon="@Icons.Material.Outlined.Search"
                              Clearable="true"
                              Class="ef-input" />
                <ManagementTableToolbar ShowSelectionBadge="true"
                                        SelectedCount="@_selectedBrands.Count"
                                        ShowRefresh="true"
                                        ShowCreate="true"
                                        ShowDelete="true"
                                        CreateTooltip="brand.createNew"
                                        IsDisabled="_isLoadingBrands"
                                        OnRefresh="@LoadBrandsAsync"
                                        OnCreate="@CreateBrand"
                                        OnDelete="@DeleteSelectedBrands" />
            </ToolBarContent>
            <HeaderContent Context="columnConfigurations">
                @foreach (var column in columnConfigurations.Where(c => c.IsVisible).OrderBy(c => c.Order))
                {
                    @if (column.PropertyName == "Name")
                    {
                        <EFTableColumnHeader TItem="BrandDto" PropertyName="Name" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel SortBy="@(new Func<BrandDto, object>(x => x.Name))">@TranslationService.GetTranslation("field.name", "Nome")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                    else if (column.PropertyName == "Description")
                    {
                        <EFTableColumnHeader TItem="BrandDto" PropertyName="Description" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel SortBy="@(new Func<BrandDto, object>(x => x.Description ?? string.Empty))">@TranslationService.GetTranslation("field.description", "Descrizione")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                    else if (column.PropertyName == "Country")
                    {
                        <EFTableColumnHeader TItem="BrandDto" PropertyName="Country" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel SortBy="@(new Func<BrandDto, object>(x => x.Country ?? string.Empty))">@TranslationService.GetTranslation("field.country", "Paese")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                    else if (column.PropertyName == "Website")
                    {
                        <EFTableColumnHeader TItem="BrandDto" PropertyName="Website" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel SortBy="@(new Func<BrandDto, object>(x => x.Website ?? string.Empty))">@TranslationService.GetTranslation("field.website", "Sito Web")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                    else if (column.PropertyName == "CreatedAt")
                    {
                        <EFTableColumnHeader TItem="BrandDto" PropertyName="CreatedAt" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                            <MudTableSortLabel InitialDirection="SortDirection.Descending" SortBy="@(new Func<BrandDto, object>(x => x.CreatedAt))">@TranslationService.GetTranslation("field.createdAt", "Creato il")</MudTableSortLabel>
                        </EFTableColumnHeader>
                    }
                }
                <MudTh Class="text-center" Style="min-width:120px;">@TranslationService.GetTranslation("common.actions", "Azioni")</MudTh>
            </HeaderContent>

            <RowTemplate Context="item">
                @{
                    var visibleColumns = _efTable?.ColumnConfigurations?.Where(c => c.IsVisible).OrderBy(c => c.Order).ToList() ?? _initialColumns.Where(c => c.IsVisible).OrderBy(c => c.Order).ToList();
                }
                @foreach (var column in visibleColumns)
                {
                    @if (column.PropertyName == "Name")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("field.name", "Nome")">
                            <div class="d-flex align-center">
                                <MudAvatar Color="Color.Primary" Size="Size.Small" Class="mr-2">
                                    <MudIcon Icon="@Icons.Material.Outlined.Sell" />
                                </MudAvatar>
                                <div>
                                    <MudText Typo="Typo.body2">@item.Name</MudText>
                                    <MudText Typo="Typo.caption" Class="mud-text-secondary">ID: @(item.Id.ToString()[..Math.Min(8, item.Id.ToString().Length)])...</MudText>
                                </div>
                            </div>
                        </MudTd>
                    }
                    else if (column.PropertyName == "Description")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("field.description", "Descrizione")">
                            <MudText Typo="Typo.body2" Class="text-truncate" Style="max-width:400px;">
                                @(string.IsNullOrEmpty(item.Description) ? "-" : item.Description)
                            </MudText>
                        </MudTd>
                    }
                    else if (column.PropertyName == "Country")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("field.country", "Paese")">
                            <MudText Typo="Typo.body2">@(item.Country ?? "-")</MudText>
                        </MudTd>
                    }
                    else if (column.PropertyName == "Website")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("field.website", "Sito Web")">
                            @if (!string.IsNullOrWhiteSpace(item.Website))
                            {
                                <MudLink Href="@item.Website" Target="_blank">@TranslationService.GetTranslation("action.visit", "Visita")</MudLink>
                            }
                            else
                            {
                                <MudText Typo="Typo.body2">-</MudText>
                            }
                        </MudTd>
                    }
                    else if (column.PropertyName == "CreatedAt")
                    {
                        <MudTd DataLabel="@TranslationService.GetTranslation("field.createdAt", "Creato il")">
                            <MudText Typo="Typo.body2">@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</MudText>
                        </MudTd>
                    }
                }
                <MudTd DataLabel="@TranslationService.GetTranslation("common.actions", "Azioni")" Class="text-center">
                    <ActionButtonGroup EntityName="@item.Name"
                                       ItemDisplayName="@item.Name"
                                       ShowView="false"
                                       ShowEdit="true"
                                       ShowAuditLog="true"
                                       ShowToggleStatus="false"
                                       ShowDelete="true"
                                       OnEdit="@(() => EditBrand(item.Id))"
                                       OnAuditLog="@(() => ViewBrandAuditLog(item))"
                                       OnDelete="@(() => DeleteBrand(item))" />
                </MudTd>
            </RowTemplate>

            <NoRecordsContent>
                <div class="text-center pa-2 pa-sm-3 pa-md-4">
                    <MudIcon Icon="@Icons.Material.Outlined.Sell" Size="Size.Medium" Class="mb-4 mud-text-secondary" />
                    <MudText Typo="Typo.h6" Class="mb-2">
                        @(_brands.Any() ?
                                            TranslationService.GetTranslation("brand.noBrandsMatchFilters", "Nessun marchio corrisponde ai filtri applicati") :
                                            TranslationService.GetTranslation("brand.noBrandsFound", "Nessun marchio trovato"))
                    </MudText>
                    @if (_brands.Any())
                    {
                        <MudButton Variant="Variant.Text"
                                   Color="Color.Primary"
                                   StartIcon="@Icons.Material.Outlined.Clear"
                                   OnClick="@ClearFilters">
                            @TranslationService.GetTranslation("action.clearFilters", "Cancella filtri")
                        </MudButton>
                    }
                </div>
            </NoRecordsContent>
            </EFTable>
        </div>
    </div>
}

@code {
    // Dialog options for fullscreen audit dialog
    private readonly DialogOptions _auditDialogOptions = new() 
    { 
        FullScreen = true, 
        CloseButton = true,
        MaxWidth = MaxWidth.False
    };
    
    // UI State Management
    private bool _isLoading = true;
    private bool _isLoadingBrands = false;

    // Filter and search state
    private string _searchTerm = string.Empty;
    private CancellationTokenSource? _searchDebounceCts;

    // Data collections
    private List<BrandDto> _brands = new();
    private HashSet<BrandDto> _selectedBrands = new();

    // EFTable reference
    private EFTable<BrandDto> _efTable = null!;

    // Column configuration for EFTable
    private List<EFTableColumnConfiguration> _initialColumns = new()
    {
        new() { PropertyName = "Name", DisplayName = "Nome", IsVisible = true, Order = 0 },
        new() { PropertyName = "Description", DisplayName = "Descrizione", IsVisible = true, Order = 1 },
        new() { PropertyName = "Country", DisplayName = "Paese", IsVisible = true, Order = 2 },
        new() { PropertyName = "Website", DisplayName = "Sito Web", IsVisible = true, Order = 3 },
        new() { PropertyName = "CreatedAt", DisplayName = "Creato il", IsVisible = true, Order = 4 }
    };

    // Dashboard configuration
    private List<DashboardMetric<BrandDto>> _dashboardMetrics = new()
    {
        new()
        {
            Title = "Totale Marchi",
            Type = MetricType.Count,
            Icon = Icons.Material.Outlined.Sell,
            Color = "primary",
            Description = "Numero totale di marchi",
            Format = "N0"
        },
        new()
        {
            Title = "Con Sito Web",
            Type = MetricType.Count,
            Filter = b => !string.IsNullOrEmpty(b.Website),
            Icon = Icons.Material.Outlined.Language,
            Color = "success",
            Description = "Marchi con sito web",
            Format = "N0"
        },
        new()
        {
            Title = "Con Descrizione",
            Type = MetricType.Count,
            Filter = b => !string.IsNullOrEmpty(b.Description),
            Icon = Icons.Material.Outlined.Description,
            Color = "info",
            Description = "Marchi con descrizione",
            Format = "N0"
        },
        new()
        {
            Title = "Ultimi Aggiunti",
            Type = MetricType.Count,
            Filter = b => b.CreatedAt >= DateTime.Now.AddDays(-30),
            Icon = Icons.Material.Outlined.NewReleases,
            Color = "warning",
            Description = "Marchi aggiunti negli ultimi 30 giorni",
            Format = "N0"
        }
    };

    private EventCallback<HashSet<BrandDto>> _selectedItemsChangedCallback => EventCallback.Factory.Create<HashSet<BrandDto>>(this, OnSelectedItemsChanged);

    /// <summary>
    /// Computed property for filtered brands based on search criteria.
    /// </summary>
    private IEnumerable<BrandDto> _filteredBrands => 
        _brands.Where(b => 
            // Search filter: check name, description, and country
            (string.IsNullOrEmpty(_searchTerm) || 
             b.Name.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
             (b.Description != null && b.Description.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)) ||
             (b.Country != null && b.Country.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase))));

    /// <summary>
    /// Handles selection changes from EFTable
    /// </summary>
    private void OnSelectedItemsChanged(HashSet<BrandDto> items)
    {
        _selectedBrands = items;
        StateHasChanged();
    }

    /// <summary>
    /// Component initialization.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Check authentication
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            if (!isAuthenticated)
            {
                await ShowLoginDialogAsync();
                return;
            }

            // Load brands
            await LoadBrandsAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add(TranslationService.GetTranslation("brand.loadingPageError", "Errore nel caricamento della pagina: {0}", ex.Message), Severity.Error);
            Logger.LogError(ex, "Error loading brands page");
        }
        finally
        {
            _isLoading = false;
        }
    }

    /// <summary>
    /// Loads brand data.
    /// </summary>
    private async Task LoadBrandsAsync()
    {
        try
        {
            _isLoadingBrands = true;
            var result = await BrandService.GetBrandsAsync(page: 1, pageSize: 100);
            _brands = result.Items?.ToList() ?? new List<BrandDto>();
        }
        catch (Exception ex)
        {
            Snackbar.Add(TranslationService.GetTranslation("brand.loadingBrandsError", "Errore nel caricamento dei marchi: {0}", ex.Message), Severity.Error);
            Logger.LogError(ex, "Error loading brands");
        }
        finally
        {
            _isLoadingBrands = false;
        }
    }

    /// <summary>
    /// Clears all active filters.
    /// </summary>
    private void ClearFilters()
    {
        _searchTerm = string.Empty;
        StateHasChanged();
    }

    private async Task OnSearchChanged()
    {
        // Cancel previous debounce if any
        _searchDebounceCts?.Cancel();
        _searchDebounceCts = new CancellationTokenSource();
        var token = _searchDebounceCts.Token;
        
        try
        {
            await Task.Delay(300, token); // Debounce with cancellation
            if (!token.IsCancellationRequested)
            {
                StateHasChanged();
            }
        }
        catch (OperationCanceledException)
        {
            // Swallow cancellation
        }
    }

    private void CreateBrand()
    {
        NavigationManager.NavigateTo("/product-management/brands/new");
    }

    private void EditBrand(Guid id)
    {
        NavigationManager.NavigateTo($"/product-management/brands/{id}");
    }

    private async Task DeleteBrand(BrandDto brand)
    {
        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslation("brand.confirmDelete", 
            "Sei sicuro di voler eliminare il marchio '{0}'? Questa azione non può essere annullata.", 
            brand.Name);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.delete", "Elimina"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                await BrandService.DeleteBrandAsync(brand.Id);
                _brands.Remove(brand);
                Snackbar.Add(TranslationService.GetTranslation("brand.brandDeleted", "Marchio eliminato con successo!"), Severity.Success);
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslation("brand.deleteBrandError", 
                    "Errore nell'eliminazione del marchio: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error deleting brand {BrandId}", brand.Id);
            }
        }
    }

    /// <summary>
    /// Opens the audit log dialog for a brand using IDialogService.
    /// </summary>
    private async Task ViewBrandAuditLog(BrandDto brand)
    {
        var parameters = new DialogParameters<AuditHistoryDialog>
        {
            { x => x.EntityType, "Brand" },
            { x => x.EntityId, brand.Id },
            { x => x.EntityName, brand.Name }
        };

        await DialogService.ShowAsync<AuditHistoryDialog>(
            TranslationService.GetTranslation("audit.historyDialog.title", "Cronologia Modifiche"),
            parameters,
            _auditDialogOptions);
    }

    /// <summary>
    /// Deletes all selected brands.
    /// </summary>
    private async Task DeleteSelectedBrands()
    {
        if (_selectedBrands.Count == 0)
            return;

        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslationFormatted("brand.confirmDeleteMultiple", 
            "Sei sicuro di voler eliminare {0} marchi selezionati? Questa azione non può essere annullata.", 
            _selectedBrands.Count);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.delete", "Elimina"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                var deletedCount = 0;
                var failedCount = 0;
                
                foreach (var brand in _selectedBrands.ToList())
                {
                    try
                    {
                        await BrandService.DeleteBrandAsync(brand.Id);
                        _brands.RemoveAll(b => b.Id == brand.Id);
                        deletedCount++;
                    }
                    catch (Exception ex)
                    {
                        failedCount++;
                        Logger.LogError(ex, "Error deleting brand {BrandId}", brand.Id);
                    }
                }
                
                _selectedBrands.Clear();
                
                if (failedCount == 0)
                {
                    Snackbar.Add(TranslationService.GetTranslationFormatted("brand.deletedMultiple", 
                        "{0} marchi eliminati con successo!", deletedCount), Severity.Success);
                }
                else
                {
                    Snackbar.Add(TranslationService.GetTranslationFormatted("brand.deletedMultiplePartial", 
                        "{0} marchi eliminati, {1} falliti", deletedCount, failedCount), Severity.Warning);
                }
                
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslationFormatted("brand.deleteError", 
                    "Errore nell'eliminazione dei marchi: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error deleting selected brands");
            }
        }
    }

    private async Task ShowLoginDialogAsync()
    {
        var result = await AuthenticationDialogService.ShowLoginDialogAsync();
        if (result)
        {
            // Reload the page after successful login
            await OnInitializedAsync();
        }
    }
}
