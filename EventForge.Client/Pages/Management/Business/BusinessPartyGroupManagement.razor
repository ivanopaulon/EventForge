    /// <summary>
    /// Deletes all selected groups.
    /// </summary>
    private async Task DeleteSelectedGroups()
    {
        if (_selectedGroups.Count == 0)
            return;

        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslationFormatted("businessPartyGroup.confirmDeleteMultiple", 
            "Sei sicuro di voler eliminare {0} gruppi selezionati? Questa azione non può essere annullata.", 
            _selectedGroups.Count);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.delete", "Elimina"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                var deletedCount = 0;
                var failedCount = 0;
                
                foreach (var group in _selectedGroups.ToList())
                {
                    try
                    {
                        await GroupService.DeleteGroupAsync(group.Id);
                        _groups.RemoveAll(g => g.Id == group.Id);
                        deletedCount++;
                    }
                    catch (Exception ex)
                    {
                        failedCount++;
                        Logger.LogError(ex, "Error deleting group {GroupId}", group.Id);
                    }
                }
                
                _selectedGroups.Clear();
                
                if (failedCount == 0)
                {
                    Snackbar.Add(TranslationService.GetTranslationFormatted("businessPartyGroup.deletedMultiple", 
                        "{0} gruppi eliminati con successo!", deletedCount), Severity.Success);
                }
                else
                {
                    Snackbar.Add(TranslationService.GetTranslationFormatted("businessPartyGroup.deletedMultiplePartial", 
                        "{0} gruppi eliminati, {1} falliti", deletedCount, failedCount), Severity.Warning);
                }
                
                await LoadGroupsAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslationFormatted("businessPartyGroup.deleteError", 
                    "Errore nell'eliminazione dei gruppi: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error deleting selected groups");
            }
        }
    }

