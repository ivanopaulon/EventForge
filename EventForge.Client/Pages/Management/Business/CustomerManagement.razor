@page "/business/customers"
@using Microsoft.AspNetCore.Authorization
@using EventForge.DTOs.Business
@using EventForge.DTOs.Common
@using EventForge.Client.Shared.Components
@attribute [Authorize]
@inject IAuthService AuthService
@inject IBusinessPartyService BusinessPartyService
@inject NavigationManager NavigationManager
@inject IAuthenticationDialogService AuthenticationDialogService
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inject ITranslationService TranslationService
@inject ILogger<CustomerManagement> Logger

<MudContainer MaxWidth="MaxWidth.False" Class="mt-4 px-0" Style="width:100%; min-height:100vh; display:flex; flex-direction:column;">
    <PageLoadingOverlay Visible="_isLoading || _isLoadingCustomers"
                         Message="@(_isLoading ? TranslationService.GetTranslation("messages.loadingPage", "Caricamento pagina...") : TranslationService.GetTranslation("common.loading", "Caricamento..."))" />

    @if (!_isLoading)
    {
        <MudPaper Elevation="2" Class="pa-2 pa-sm-3 pa-md-4 mb-4">
            <div class="d-flex justify-space-between align-center mb-4">
                <div>
                    <MudText Typo="Typo.h4">
                        <MudIcon Icon="@Icons.Material.Outlined.People" Class="mr-2" />
                        @TranslationService.GetTranslation("customer.management", "Gestione Clienti")
                    </MudText>
                    <MudText Typo="Typo.body2" Class="mud-text-secondary mt-2">
                        @TranslationService.GetTranslation("customer.managementDescription", "Gestisci i clienti per la tua organizzazione")
                    </MudText>
                </div>
            </div>

            <!-- Filters Section -->
            <MudPaper Elevation="0" Class="pa-3 mb-4" Style="background-color: var(--mud-palette-background-grey);">
                <div class="d-flex gap-3 align-center flex-wrap">
                    <MudTextField @bind-Value="_searchTerm"
                                  @bind-Value:after="OnSearchChanged"
                                  Label="@TranslationService.GetTranslation("customer.search", "Cerca clienti")"
                                  Placeholder="@TranslationService.GetTranslation("customer.searchPlaceholder", "Inserisci nome, P.IVA o codice fiscale...")"
                                  Variant="Variant.Outlined"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@Icons.Material.Outlined.Search"
                                  Clearable="true"
                                  Style="flex: 2;" />
                </div>
            </MudPaper>

            <!-- Customers Data Table -->
            <MudPaper Elevation="1" Class="border-rounded">
                <div class="pa-2">
                    <MudText Typo="Typo.h6" Class="mb-2">
                        <MudIcon Icon="@Icons.Material.Outlined.List" Class="mr-2" />
                        @TranslationService.GetTranslation("customer.list", "Lista Clienti")
                        <MudText Typo="Typo.body2" Class="mud-text-secondary ml-2">
                            (@_filteredCustomers.Count() @TranslationService.GetTranslation("customer.itemsFound", "elementi trovati"))
                        </MudText>
                    </MudText>
                    
                    <ManagementTableToolbar ShowSelectionBadge="true"
                                            SelectedCount="@_selectedCustomers.Count"
                                            ShowRefresh="true"
                                            ShowCreate="true"
                                            ShowDelete="true"
                                            CreateLabel="customer.create"
                                            CreateTooltip="customer.createNew"
                                            IsDisabled="_isLoadingCustomers"
                                            OnRefresh="@LoadCustomersAsync"
                                            OnCreate="@CreateCustomer"
                                            OnDelete="@DeleteSelectedCustomers" />
                </div>
                <MudCardContent Class="pa-1">
                    @if (_isLoadingCustomers)
                    {
                        <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="mt-4" />
                    }
                    else
                    {
                        <MudTable T="BusinessPartyDto" 
                                  Items="_filteredCustomers"
                                  MultiSelection="true"
                                  @bind-SelectedItems="_selectedCustomers"
                                  Hover="true" 
                                  Striped="true"
                                  Loading="_isLoadingCustomers"
                                  LoadingProgressColor="Color.Info"
                                  SortLabel="@TranslationService.GetTranslation("tooltip.sortColumn", "Ordina colonna")"
                                  AllowUnsorted="false"
                                  Dense="false"
                                  Breakpoint="Breakpoint.Sm">
                            <HeaderContent>
                                <MudTh><MudTableSortLabel SortBy="@(new Func<BusinessPartyDto, object>(x => x.Name))">@TranslationService.GetTranslation("field.name", "Nome")</MudTableSortLabel></MudTh>
                                <MudTh><MudTableSortLabel SortBy="@(new Func<BusinessPartyDto, object>(x => x.VatNumber ?? ""))">@TranslationService.GetTranslation("field.vatNumber", "P.IVA")</MudTableSortLabel></MudTh>
                                <MudTh><MudTableSortLabel SortBy="@(new Func<BusinessPartyDto, object>(x => x.TaxCode ?? ""))">@TranslationService.GetTranslation("field.taxCode", "C.F.")</MudTableSortLabel></MudTh>
                                <MudTh><MudTableSortLabel SortBy="@(new Func<BusinessPartyDto, object>(x => x.City ?? ""))">@TranslationService.GetTranslation("field.city", "Località")</MudTableSortLabel></MudTh>
                                <MudTh><MudTableSortLabel SortBy="@(new Func<BusinessPartyDto, object>(x => x.Province ?? ""))">@TranslationService.GetTranslation("field.province", "Provincia")</MudTableSortLabel></MudTh>
                                <MudTh><MudTableSortLabel SortBy="@(new Func<BusinessPartyDto, object>(x => x.Country ?? ""))">@TranslationService.GetTranslation("field.country", "Nazione")</MudTableSortLabel></MudTh>
                                <MudTh>@TranslationService.GetTranslation("field.contacts", "Contatti")</MudTh>
                                <MudTh Class="text-center" Style="min-width: 120px;">@TranslationService.GetTranslation("common.actions", "Azioni")</MudTh>
                            </HeaderContent>

                            <RowTemplate>
                                <MudTd DataLabel="@TranslationService.GetTranslation("field.name", "Nome")">
                                    <MudTooltip>
                                        <ChildContent>
                                            <div class="d-flex align-center">
                                                <MudAvatar Color="Color.Info" Size="Size.Small" Class="mr-2">
                                                    <MudIcon Icon="@Icons.Material.Outlined.Person" />
                                                </MudAvatar>
                                                <div>
                                                    <MudText Typo="Typo.body2">@context.Name</MudText>
                                                    <MudText Typo="Typo.caption" Class="mud-text-secondary">ID: @context.Id.ToString().Substring(0, 8)...</MudText>
                                                </div>
                                            </div>
                                        </ChildContent>
                                        <TooltipContent>
                                            @if (context.Contacts.Any())
                                            {
                                                <div style="padding: 8px;">
                                                    <MudText Typo="Typo.subtitle2" Class="mb-2"><strong>@TranslationService.GetTranslation("field.contacts", "Contatti"):</strong></MudText>
                                                    @foreach (var contact in context.Contacts)
                                                    {
                                                        <div class="mb-1">
                                                            <MudText Typo="Typo.body2">
                                                                <MudIcon Icon="@GetContactIcon(contact.ContactType)" Size="Size.Small" Class="mr-1" />
                                                                @contact.Value
                                                                @if (contact.IsPrimary)
                                                                {
                                                                    <MudChip T="string" Size="Size.Small" Color="Color.Primary" Style="height: 18px; font-size: 0.7rem;">@TranslationService.GetTranslation("common.primary", "Primario")</MudChip>
                                                                }
                                                            </MudText>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <MudText Typo="Typo.body2">@TranslationService.GetTranslation("customer.noContactsAvailable", "Nessun contatto disponibile")</MudText>
                                            }
                                        </TooltipContent>
                                    </MudTooltip>
                                </MudTd>
                                <MudTd DataLabel="@TranslationService.GetTranslation("field.vatNumber", "P.IVA")">
                                    <MudText Typo="Typo.body2">@(context.VatNumber ?? "-")</MudText>
                                </MudTd>
                                <MudTd DataLabel="@TranslationService.GetTranslation("field.taxCode", "C.F.")">
                                    <MudText Typo="Typo.body2">@(context.TaxCode ?? "-")</MudText>
                                </MudTd>
                                <MudTd DataLabel="@TranslationService.GetTranslation("field.city", "Località")">
                                    <MudText Typo="Typo.body2">@(context.City ?? "-")</MudText>
                                </MudTd>
                                <MudTd DataLabel="@TranslationService.GetTranslation("field.province", "Provincia")">
                                    <MudText Typo="Typo.body2">@(context.Province ?? "-")</MudText>
                                </MudTd>
                                <MudTd DataLabel="@TranslationService.GetTranslation("field.country", "Nazione")">
                                    <MudText Typo="Typo.body2">@(context.Country ?? "-")</MudText>
                                </MudTd>
                                <MudTd DataLabel="@TranslationService.GetTranslation("field.contacts", "Contatti")">
                                    <div class="d-flex gap-2">
                                        <MudChip T="string" Size="Size.Small" Icon="@Icons.Material.Outlined.LocationOn">@context.AddressCount</MudChip>
                                        <MudChip T="string" Size="Size.Small" Icon="@Icons.Material.Outlined.Phone">@context.ContactCount</MudChip>
                                        <MudChip T="string" Size="Size.Small" Icon="@Icons.Material.Outlined.Person">@context.ReferenceCount</MudChip>
                                    </div>
                                </MudTd>
                                <MudTd DataLabel="@TranslationService.GetTranslation("common.actions", "Azioni")" Class="text-center">
                                    <ActionButtonGroup EntityName="@context.Name"
                                                      ItemDisplayName="@context.Name"
                                                      ShowView="false"
                                                      ShowEdit="true"
                                                      ShowAuditLog="true"
                                                      ShowToggleStatus="true"
                                                      ShowDelete="true"
                                                      IsActive="@context.IsActive"
                                                      OnEdit="@(() => EditCustomer(context))"
                                                      OnAuditLog="@(() => ViewCustomerAuditLog(context))"
                                                      OnToggleStatus="@(() => ToggleCustomerStatus(context))"
                                                      OnDelete="@(() => DeleteCustomer(context))" />
                                </MudTd>
                            </RowTemplate>

                            <NoRecordsContent>
                                <div class="text-center pa-2 pa-sm-3 pa-md-4">
                                    <MudIcon Icon="@Icons.Material.Outlined.People" Size="Size.Medium" Class="mb-4 mud-text-secondary" />
                                    <MudText Typo="Typo.h6" Class="mb-2">
                                        @(_customers.Any() ? 
                                            TranslationService.GetTranslation("customer.noMatchFilters", "Nessun cliente corrisponde ai filtri applicati") : 
                                            TranslationService.GetTranslation("customer.noFound", "Nessun cliente trovato"))
                                    </MudText>
                                    @if (_customers.Any())
                                    {
                                        <MudButton Variant="Variant.Text" 
                                                   Color="Color.Primary" 
                                                   StartIcon="@Icons.Material.Outlined.Clear"
                                                   OnClick="@ClearFilters">
                                            @TranslationService.GetTranslation("customer.clearFilters", "Cancella filtri")
                                        </MudButton>
                                    }
                                </div>
                            </NoRecordsContent>
                        </MudTable>
                    }
                </MudCardContent>
            </MudPaper>
        </MudPaper>
    }
</MudContainer>

@code {
    // Dialog options for fullscreen audit dialog
    private readonly DialogOptions _auditDialogOptions = new() 
    { 
        FullScreen = true, 
        CloseButton = true,
        MaxWidth = MaxWidth.False
    };
    
    // UI State Management
    private bool _isLoading = true;
    private bool _isLoadingCustomers = false;
    
    // Selection management
    private HashSet<BusinessPartyDto> _selectedCustomers = new();
    
    // Filter and search state
    private string _searchTerm = string.Empty;
    
    // Data collections
    private List<BusinessPartyDto> _customers = new();

    /// <summary>
    /// Computed property for filtered customers based on search criteria.
    /// </summary>
    private IEnumerable<BusinessPartyDto> _filteredCustomers => 
        _customers.Where(c => 
            // Search filter: check name, VAT number, or tax code
            string.IsNullOrEmpty(_searchTerm) || 
            c.Name.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
            (c.VatNumber != null && c.VatNumber.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)) ||
            (c.TaxCode != null && c.TaxCode.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)));

    /// <summary>
    /// Component initialization.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Check authentication
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            if (!isAuthenticated)
            {
                await ShowLoginDialogAsync();
                return;
            }

            // Load customers
            await LoadCustomersAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add(TranslationService.GetTranslation("customer.loadingPageError", "Errore nel caricamento della pagina: {0}", ex.Message), Severity.Error);
            Logger.LogError(ex, "Error loading customers page");
        }
        finally
        {
            _isLoading = false;
        }
    }

    /// <summary>
    /// Loads customer data (Cliente and ClienteFornitore types).
    /// </summary>
    private async Task LoadCustomersAsync()
    {
        try
        {
            _isLoadingCustomers = true;
            
            // Get customers (Cliente type)
            var customers = await BusinessPartyService.GetBusinessPartiesByTypeAsync(BusinessPartyType.Cliente);
            
            // Get both types (Cliente/Fornitore)
            var both = await BusinessPartyService.GetBusinessPartiesByTypeAsync(BusinessPartyType.Both);
            
            // Combine and sort
            _customers = customers.Concat(both).OrderBy(c => c.Name).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add(TranslationService.GetTranslation("customer.loadingError", "Errore nel caricamento dei clienti: {0}", ex.Message), Severity.Error);
            Logger.LogError(ex, "Error loading customers");
        }
        finally
        {
            _isLoadingCustomers = false;
        }
    }

    /// <summary>
    /// Clears all active filters.
    /// </summary>
    private async Task ClearFilters()
    {
        _searchTerm = string.Empty;
        await Task.CompletedTask;
        StateHasChanged();
    }

    private async Task OnSearchChanged()
    {
        await Task.Delay(300); // Debounce
        StateHasChanged();
    }

    private void CreateCustomer()
    {
        NavigationManager.NavigateTo("/business/customers/new");
    }

    private void EditCustomer(BusinessPartyDto customer)
    {
        NavigationManager.NavigateTo($"/business/customers/{customer.Id}");
    }

    private async Task DeleteCustomer(BusinessPartyDto customer)
    {
        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslation("customer.confirmDelete", 
            "Sei sicuro di voler eliminare il cliente '{0}'? Questa azione non può essere annullata.", 
            customer.Name);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.delete", "Elimina"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                await BusinessPartyService.DeleteBusinessPartyAsync(customer.Id);
                _customers.Remove(customer);
                Snackbar.Add(TranslationService.GetTranslation("customer.deleted", "Cliente eliminato con successo!"), Severity.Success);
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslation("customer.deleteError", 
                    "Errore nell'eliminazione del cliente: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error deleting customer {CustomerId}", customer.Id);
            }
        }
    }

    private string GetContactIcon(ContactType contactType)
    {
        return contactType switch
        {
            ContactType.Email => Icons.Material.Outlined.Email,
            ContactType.Phone => Icons.Material.Outlined.Phone,
            ContactType.Fax => Icons.Material.Outlined.Print,
            ContactType.PEC => Icons.Material.Outlined.Email,
            _ => Icons.Material.Outlined.ContactPage
        };
    }

    /// <summary>
    /// Opens the audit log drawer for a customer.
    /// </summary>
    private async Task ViewCustomerAuditLog(BusinessPartyDto customer)
    {
        var parameters = new DialogParameters<AuditHistoryDialog>
        {
            { x => x.EntityType, "BusinessParty" },
            { x => x.EntityId, customer.Id },
            { x => x.EntityName, customer.Name }
        };

        await DialogService.ShowAsync<AuditHistoryDialog>(
            TranslationService.GetTranslation("audit.historyDialog.title", "Cronologia Modifiche"),
            parameters,
            _auditDialogOptions);
    }

    /// <summary>
    /// Toggles the active status of a customer.
    /// </summary>
    private async Task ToggleCustomerStatus(BusinessPartyDto customer)
    {
        var actionText = customer.IsActive ? 
            TranslationService.GetTranslation("common.deactivate", "disattivare") : 
            TranslationService.GetTranslation("common.activate", "attivare");
            
        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslationFormatted("customer.confirmStatusChange", 
            "Sei sicuro di voler {0} il cliente '{1}'?", 
            actionText, customer.Name);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.confirm", "Conferma"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                // Toggle the status locally (in a real implementation, you would call a service method)
                customer.IsActive = !customer.IsActive;
                
                var statusMessage = customer.IsActive ?
                    TranslationService.GetTranslation("customer.activated", "Cliente attivato con successo!") :
                    TranslationService.GetTranslation("customer.deactivated", "Cliente disattivato con successo!");
                
                Snackbar.Add(statusMessage, Severity.Success);
                StateHasChanged();
                
                // Note: In a real implementation, you would call:
                // await BusinessPartyService.ToggleBusinessPartyStatusAsync(customer.Id, customer.IsActive);
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslation("customer.statusChangeError", 
                    "Errore nel cambio di stato: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error toggling customer status {CustomerId}", customer.Id);
                // Revert the change on error
                customer.IsActive = !customer.IsActive;
            }
        }
    }

    /// <summary>
    /// Deletes all selected customers.
    /// </summary>
    private async Task DeleteSelectedCustomers()
    {
        if (_selectedCustomers.Count == 0)
            return;

        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslationFormatted("customer.confirmDeleteMultiple", 
            "Sei sicuro di voler eliminare {0} clienti selezionati? Questa azione non può essere annullata.", 
            _selectedCustomers.Count);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.delete", "Elimina"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                var deletedCount = 0;
                var failedCount = 0;
                
                foreach (var customer in _selectedCustomers.ToList())
                {
                    try
                    {
                        await BusinessPartyService.DeleteBusinessPartyAsync(customer.Id);
                        _customers.Remove(customer);
                        deletedCount++;
                    }
                    catch (Exception ex)
                    {
                        failedCount++;
                        Logger.LogError(ex, "Error deleting customer {CustomerId}", customer.Id);
                    }
                }
                
                _selectedCustomers.Clear();
                
                if (failedCount == 0)
                {
                    Snackbar.Add(TranslationService.GetTranslationFormatted("customer.deletedMultiple", 
                        "{0} clienti eliminati con successo!", deletedCount), Severity.Success);
                }
                else
                {
                    Snackbar.Add(TranslationService.GetTranslationFormatted("customer.deletedMultiplePartial", 
                        "{0} clienti eliminati, {1} falliti", deletedCount, failedCount), Severity.Warning);
                }
                
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslationFormatted("customer.deleteError", 
                    "Errore nell'eliminazione dei clienti: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error deleting selected customers");
            }
        }
    }

    private async Task ShowLoginDialogAsync()
    {
        var result = await AuthenticationDialogService.ShowLoginDialogAsync();
        if (result)
        {
            // Reload the page after successful login
            await OnInitializedAsync();
        }
    }
}
