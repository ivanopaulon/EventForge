    /// <summary>
    /// Deletes all selected business parties.
    /// </summary>
    private async Task DeleteSelectedBusinessParties()
    {
        if (_selectedBusinessParties.Count == 0)
            return;

        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslationFormatted("businessparty.confirmDeleteMultiple", 
            "Sei sicuro di voler eliminare {0} business party selezionati? Questa azione non può essere annullata.", 
            _selectedBusinessParties.Count);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.delete", "Elimina"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                var deletedCount = 0;
                var failedCount = 0;
                
                foreach (var businessParty in _selectedBusinessParties.ToList())
                {
                    try
                    {
                        await BusinessPartyService.DeleteBusinessPartyAsync(businessParty.Id);
                        _allBusinessParties.Remove(businessParty);
                        deletedCount++;
                    }
                    catch (Exception ex)
                    {
                        failedCount++;
                        Logger.LogError(ex, "Error deleting business party {BusinessPartyId}", businessParty.Id);
                    }
                }
                
                _selectedBusinessParties.Clear();
                
                if (failedCount == 0)
                {
                    Snackbar.Add(TranslationService.GetTranslationFormatted("businessparty.deletedMultiple", 
                        "{0} business party eliminati con successo!", deletedCount), Severity.Success);
                }
                else
                {
                    Snackbar.Add(TranslationService.GetTranslationFormatted("businessparty.deletedMultiplePartial", 
                        "{0} business party eliminati, {1} falliti", deletedCount, failedCount), Severity.Warning);
                }
                
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslationFormatted("businessparty.deleteError", 
                    "Errore nell'eliminazione dei business party: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error deleting selected business parties");
            }
        }
    }

