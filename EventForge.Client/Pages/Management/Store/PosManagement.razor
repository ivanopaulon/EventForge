@page "/store/pos"
@using Microsoft.AspNetCore.Authorization
@using EventForge.DTOs.Store
@using EventForge.DTOs.Common
@using EventForge.Client.Shared.Components
@attribute [Authorize]
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@inject IAuthenticationDialogService AuthenticationDialogService
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inject ITranslationService TranslationService
@inject ILogger<PosManagement> Logger
@inject EventForge.Client.Services.Store.IStorePosService StorePosService

<PageLoadingOverlay Visible="_isLoading || _isLoadingData"
                     Message="@(_isLoading ? TranslationService.GetTranslation("messages.loadingPage", "Caricamento pagina...") : TranslationService.GetTranslation("common.loading", "Caricamento..."))" />

@if (!_isLoading)
{
    <div class="product-page-root">
        <div class="product-top">
            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.h5">
                    @TranslationService.GetTranslation("store.posManagement", "Gestione Punti Cassa")
                </MudText>
            </MudPaper>
        </div>

        <div class="eftable-wrapper">
            <EFTable @ref="_efTable"
                     TItem="StorePosDto"
                     Items="_filteredItems"
                     MultiSelection="true"
                     SelectedItems="_selectedItems"
                     SelectedItemsChanged="_selectedItemsChangedCallback"
                     OnRowClick="@(args => NavigationManager.NavigateTo($"/store/pos/{args.Item.Id}"))"
                     IsLoading="_isLoadingData"
                     ComponentKey="PosManagement"
                     InitialColumnConfigurations="_initialColumns"
                     AllowDragDropGrouping="true">
                <ToolBarContent>
                    <MudText Typo="Typo.h5">
                        @TranslationService.GetTranslation("store.posList", "Punti Cassa")
                    </MudText>
                    <MudSpacer />
                    <MudTextField @bind-Value="_searchTerm"
                                  @bind-Value:after="OnSearchChanged"
                                  Label="@TranslationService.GetTranslation("common.search", "Cerca")"
                                  Placeholder="@TranslationService.GetTranslation("store.searchPos", "Cerca per nome, location...")"
                                  Variant="Variant.Outlined"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@Icons.Material.Outlined.Search"
                                  Clearable="true"
                                  Class="ef-input" />
                    <ManagementTableToolbar ShowSelectionBadge="true"
                                            SelectedCount="@_selectedItems.Count"
                                            ShowRefresh="true"
                                            ShowCreate="true"
                                            ShowDelete="true"
                                            CreateTooltip="store.createNewPos"
                                            IsDisabled="_isLoadingData"
                                            OnRefresh="@LoadDataAsync"
                                            OnCreate="@CreateNew"
                                            OnDelete="@DeleteSelected" />
                </ToolBarContent>
                <HeaderContent Context="columnConfigurations">
                    @foreach (var column in columnConfigurations.Where(c => c.IsVisible).OrderBy(c => c.Order))
                    {
                        @if (column.PropertyName == "Name")
                        {
                            <EFTableColumnHeader TItem="StorePosDto" PropertyName="Name" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<StorePosDto, object>(x => x.Name))">@TranslationService.GetTranslation("field.name", "Nome")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "Location")
                        {
                            <EFTableColumnHeader TItem="StorePosDto" PropertyName="Location" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<StorePosDto, object>(x => x.Location ?? string.Empty))">@TranslationService.GetTranslation("field.location", "Location")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "Status")
                        {
                            <EFTableColumnHeader TItem="StorePosDto" PropertyName="Status" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<StorePosDto, object>(x => x.Status))">@TranslationService.GetTranslation("field.status", "Status")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "IsOnline")
                        {
                            <EFTableColumnHeader TItem="StorePosDto" PropertyName="IsOnline" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<StorePosDto, object>(x => x.IsOnline))">@TranslationService.GetTranslation("field.isOnline", "Online")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "TerminalIdentifier")
                        {
                            <EFTableColumnHeader TItem="StorePosDto" PropertyName="TerminalIdentifier" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<StorePosDto, object>(x => x.TerminalIdentifier ?? string.Empty))">@TranslationService.GetTranslation("field.terminalId", "Terminal")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                    }
                    <MudTh Class="text-center" Style="min-width:120px;">@TranslationService.GetTranslation("common.actions", "Azioni")</MudTh>
                </HeaderContent>

                <RowTemplate Context="item">
                    @{
                        var visibleColumns = _efTable?.ColumnConfigurations?.Where(c => c.IsVisible).OrderBy(c => c.Order).ToList() ?? _initialColumns.Where(c => c.IsVisible).OrderBy(c => c.Order).ToList();
                    }
                    @foreach (var column in visibleColumns)
                    {
                        @if (column.PropertyName == "Name")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.name", "Nome")">
                                <div class="d-flex align-center">
                                    <MudAvatar Color="Color.Primary" Size="Size.Small" Class="mr-2">
                                        <MudIcon Icon="@Icons.Material.Outlined.PointOfSale" />
                                    </MudAvatar>
                                    <div>
                                        <MudText Typo="Typo.body2">@item.Name</MudText>
                                        <MudText Typo="Typo.caption" Class="mud-text-secondary">ID: @(item.Id.ToString()[..Math.Min(8, item.Id.ToString().Length)])...</MudText>
                                    </div>
                                </div>
                            </MudTd>
                        }
                        else if (column.PropertyName == "Location")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.location", "Location")">
                                <MudText Typo="Typo.body2">
                                    @(string.IsNullOrEmpty(item.Location) ? "-" : item.Location)
                                </MudText>
                            </MudTd>
                        }
                        else if (column.PropertyName == "Status")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.status", "Status")">
                                <MudChip T="string" Size="Size.Small" Color="GetStatusColor(item.Status)">
                                    @GetStatusText(item.Status)
                                </MudChip>
                            </MudTd>
                        }
                        else if (column.PropertyName == "IsOnline")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.isOnline", "Online")">
                                <MudChip T="string" Size="Size.Small" Color="@(item.IsOnline ? Color.Success : Color.Default)" Icon="@(item.IsOnline ? Icons.Material.Outlined.CheckCircle : Icons.Material.Outlined.Circle)">
                                    @(item.IsOnline ? "Online" : "Offline")
                                </MudChip>
                            </MudTd>
                        }
                        else if (column.PropertyName == "TerminalIdentifier")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.terminalId", "Terminal")">
                                <MudText Typo="Typo.body2">
                                    @(string.IsNullOrEmpty(item.TerminalIdentifier) ? "-" : item.TerminalIdentifier)
                                </MudText>
                            </MudTd>
                        }
                    }
                    <MudTd DataLabel="@TranslationService.GetTranslation("common.actions", "Azioni")" Class="text-center">
                        <ActionButtonGroup EntityName="@item.Name"
                                           ItemDisplayName="@item.Name"
                                           ShowView="false"
                                           ShowEdit="true"
                                           ShowAuditLog="false"
                                           ShowToggleStatus="false"
                                           ShowDelete="true"
                                           OnEdit="@(() => Edit(item.Id))"
                                           OnDelete="@(() => Delete(item))" />
                    </MudTd>
                </RowTemplate>

                <NoRecordsContent>
                    <div class="text-center pa-2 pa-sm-3 pa-md-4">
                        <MudIcon Icon="@Icons.Material.Outlined.PointOfSale" Size="Size.Medium" Class="mb-4 mud-text-secondary" />
                        <MudText Typo="Typo.h6" Class="mb-2">
                            @(_items.Any() ?
                                                TranslationService.GetTranslation("store.noPosMatchFilters", "Nessun punto cassa corrisponde ai filtri applicati") :
                                                TranslationService.GetTranslation("store.noPosFound", "Nessun punto cassa trovato"))
                        </MudText>
                        @if (_items.Any())
                        {
                            <MudButton Variant="Variant.Text"
                                       Color="Color.Primary"
                                       StartIcon="@Icons.Material.Outlined.Clear"
                                       OnClick="@ClearFilters">
                                @TranslationService.GetTranslation("action.clearFilters", "Cancella filtri")
                            </MudButton>
                        }
                    </div>
                </NoRecordsContent>
            </EFTable>

            <!-- Pagination -->
            @if (_pagedResult != null)
            {
                <MudDivider Class="my-4" />
                <div class="d-flex justify-center align-center flex-wrap gap-4">
                    @if (_pagedResult.TotalPages > 1)
                    {
                        <MudPagination Count="@_pagedResult.TotalPages"
                                       Selected="@_currentPage"
                                       Color="Color.Primary"
                                       Size="Size.Medium"
                                       ShowFirstButton="true"
                                       ShowLastButton="true"
                                       SelectedChanged="@OnPageChanged" />
                    }
                    <MudText Typo="Typo.caption" Color="Color.Secondary">
                        @if (_pagedResult.TotalPages > 1)
                        {
                            @TranslationService.GetTranslation("pagination.info",
                                "Pagina {0} di {1} - Totale: {2} elementi",
                                _currentPage, _pagedResult.TotalPages, _pagedResult.TotalCount)
                        }
                        else
                        {
                            @TranslationService.GetTranslation("pagination.singlePage",
                                "Totale: {0} elementi",
                                _pagedResult.TotalCount)
                        }
                    </MudText>
                </div>
            }
        </div>
    </div>
}

@code {
    private bool _isLoading = true;
    private bool _isLoadingData = false;
    private string _searchTerm = string.Empty;
    private CancellationTokenSource? _searchDebounceCts;
    private PagedResult<StorePosDto>? _pagedResult;
    private int _currentPage = 1;
    private int _pageSize = 20;
    private List<StorePosDto> _items = new();
    private HashSet<StorePosDto> _selectedItems = new();
    private EFTable<StorePosDto> _efTable = null!;

    private List<EFTableColumnConfiguration> _initialColumns = new()
    {
        new() { PropertyName = "Name", DisplayName = "Nome", IsVisible = true, Order = 0 },
        new() { PropertyName = "Location", DisplayName = "Location", IsVisible = true, Order = 1 },
        new() { PropertyName = "Status", DisplayName = "Status", IsVisible = true, Order = 2 },
        new() { PropertyName = "IsOnline", DisplayName = "Online", IsVisible = true, Order = 3 },
        new() { PropertyName = "TerminalIdentifier", DisplayName = "Terminal", IsVisible = true, Order = 4 }
    };

    private EventCallback<HashSet<StorePosDto>> _selectedItemsChangedCallback => EventCallback.Factory.Create<HashSet<StorePosDto>>(this, OnSelectedItemsChanged);

    private IEnumerable<StorePosDto> _filteredItems =>
        _items.Where(p =>
            string.IsNullOrEmpty(_searchTerm) ||
            p.Name.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
            (p.Location != null && p.Location.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)) ||
            (p.TerminalIdentifier != null && p.TerminalIdentifier.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)));

    private void OnSelectedItemsChanged(HashSet<StorePosDto> items)
    {
        _selectedItems = items;
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            if (!isAuthenticated)
            {
                await ShowLoginDialogAsync();
                return;
            }

            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add(TranslationService.GetTranslation("store.loadingPageError", "Errore nel caricamento della pagina: {0}", ex.Message), Severity.Error);
            Logger.LogError(ex, "Error loading POS management page");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _isLoadingData = true;
            _pagedResult = await StorePosService.GetPagedAsync(_currentPage, _pageSize);

            if (_pagedResult != null)
            {
                _items = _pagedResult.Items.ToList();
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add(TranslationService.GetTranslation("store.loadingPosError", "Errore nel caricamento dei punti cassa: {0}", ex.Message), Severity.Error);
            Logger.LogError(ex, "Error loading POS");
        }
        finally
        {
            _isLoadingData = false;
        }
    }

    private void ClearFilters()
    {
        _searchTerm = string.Empty;
        StateHasChanged();
    }

    private async Task OnSearchChanged()
    {
        _currentPage = 1;
        _searchDebounceCts?.Cancel();
        _searchDebounceCts = new CancellationTokenSource();
        var token = _searchDebounceCts.Token;

        try
        {
            await Task.Delay(300, token);
            if (!token.IsCancellationRequested)
            {
                StateHasChanged();
            }
        }
        catch (OperationCanceledException)
        {
        }
    }

    private async Task OnPageChanged(int page)
    {
        _currentPage = page;
        await LoadDataAsync();
    }

    private void CreateNew()
    {
        NavigationManager.NavigateTo("/store/pos/new");
    }

    private void Edit(Guid id)
    {
        NavigationManager.NavigateTo($"/store/pos/{id}");
    }

    private async Task Delete(StorePosDto item)
    {
        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslation("store.confirmDeletePos",
            "Sei sicuro di voler eliminare il punto cassa '{0}'? Questa azione non può essere annullata.",
            item.Name);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.delete", "Elimina"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                await StorePosService.DeleteAsync(item.Id);
                _items.Remove(item);
                Snackbar.Add(TranslationService.GetTranslation("store.posDeleted", "Punto cassa eliminato con successo!"), Severity.Success);
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslation("store.deletePosError",
                    "Errore nell'eliminazione del punto cassa: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error deleting POS {PosId}", item.Id);
            }
        }
    }

    private async Task DeleteSelected()
    {
        if (_selectedItems.Count == 0)
            return;

        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslationFormatted("store.confirmDeleteMultiplePos",
            "Sei sicuro di voler eliminare {0} punti cassa selezionati? Questa azione non può essere annullata.",
            _selectedItems.Count);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.delete", "Elimina"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                var deletedCount = 0;
                var failedCount = 0;

                foreach (var item in _selectedItems.ToList())
                {
                    try
                    {
                        await StorePosService.DeleteAsync(item.Id);
                        _items.RemoveAll(p => p.Id == item.Id);
                        deletedCount++;
                    }
                    catch (Exception ex)
                    {
                        failedCount++;
                        Logger.LogError(ex, "Error deleting POS {PosId}", item.Id);
                    }
                }

                _selectedItems.Clear();

                if (failedCount == 0)
                {
                    Snackbar.Add(TranslationService.GetTranslationFormatted("store.deletedMultiplePos",
                        "{0} punti cassa eliminati con successo!", deletedCount), Severity.Success);
                }
                else
                {
                    Snackbar.Add(TranslationService.GetTranslationFormatted("store.deletedMultiplePosPartial",
                        "{0} punti cassa eliminati, {1} falliti", deletedCount, failedCount), Severity.Warning);
                }

                StateHasChanged();
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslationFormatted("store.deleteError",
                    "Errore nell'eliminazione dei punti cassa: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error deleting selected POS");
            }
        }
    }

    private Color GetStatusColor(CashRegisterStatus status) => status switch
    {
        CashRegisterStatus.Active => Color.Success,
        CashRegisterStatus.Suspended => Color.Warning,
        CashRegisterStatus.Maintenance => Color.Info,
        CashRegisterStatus.Disabled => Color.Error,
        _ => Color.Default
    };

    private string GetStatusText(CashRegisterStatus status) => status switch
    {
        CashRegisterStatus.Active => TranslationService.GetTranslation("status.active", "Attivo"),
        CashRegisterStatus.Suspended => TranslationService.GetTranslation("status.suspended", "Sospeso"),
        CashRegisterStatus.Maintenance => TranslationService.GetTranslation("status.maintenance", "Manutenzione"),
        CashRegisterStatus.Disabled => TranslationService.GetTranslation("status.disabled", "Disabilitato"),
        _ => status.ToString()
    };

    private async Task ShowLoginDialogAsync()
    {
        var result = await AuthenticationDialogService.ShowLoginDialogAsync();
        if (result)
        {
            await OnInitializedAsync();
        }
    }
}
