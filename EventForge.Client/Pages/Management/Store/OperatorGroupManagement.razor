@page "/store/operator-groups"
@using Microsoft.AspNetCore.Authorization
@using EventForge.DTOs.Store
@using EventForge.DTOs.Common
@using EventForge.Client.Shared.Components
@attribute [Authorize]
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@inject IAuthenticationDialogService AuthenticationDialogService
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inject ITranslationService TranslationService
@inject ILogger<OperatorGroupManagement> Logger
@inject EventForge.Client.Services.Store.IStoreUserGroupService StoreUserGroupService

<PageLoadingOverlay Visible="_isLoading || _isLoadingData"
                     Message="@(_isLoading ? TranslationService.GetTranslation("messages.loadingPage", "Caricamento pagina...") : TranslationService.GetTranslation("common.loading", "Caricamento..."))" />

@if (!_isLoading)
{
    <div class="product-page-root">
        <div class="product-top">
            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.h5">
                    @TranslationService.GetTranslation("store.operatorGroupManagement", "Gestione Gruppi Operatori")
                </MudText>
            </MudPaper>
        </div>

        <div class="eftable-wrapper">
            <EFTable @ref="_efTable"
                     TItem="StoreUserGroupDto"
                     Items="_filteredItems"
                     MultiSelection="true"
                     SelectedItems="_selectedItems"
                     SelectedItemsChanged="_selectedItemsChangedCallback"
                     OnRowClick="@(args => NavigationManager.NavigateTo($"/store/operator-groups/{args.Item.Id}"))"
                     IsLoading="_isLoadingData"
                     ComponentKey="OperatorGroupManagement"
                     InitialColumnConfigurations="_initialColumns"
                     AllowDragDropGrouping="true">
                <ToolBarContent>
                    <MudText Typo="Typo.h5">
                        @TranslationService.GetTranslation("store.operatorGroupsList", "Gruppi Operatori")
                    </MudText>
                    <MudSpacer />
                    <MudTextField @bind-Value="_searchTerm"
                                  @bind-Value:after="OnSearchChanged"
                                  Label="@TranslationService.GetTranslation("common.search", "Cerca")"
                                  Placeholder="@TranslationService.GetTranslation("store.searchOperatorGroups", "Cerca per codice, nome...")"
                                  Variant="Variant.Outlined"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@Icons.Material.Outlined.Search"
                                  Clearable="true"
                                  Class="ef-input" />
                    <ManagementTableToolbar ShowSelectionBadge="true"
                                            SelectedCount="@_selectedItems.Count"
                                            ShowRefresh="true"
                                            ShowCreate="true"
                                            ShowDelete="true"
                                            CreateTooltip="store.createNewOperatorGroup"
                                            IsDisabled="_isLoadingData"
                                            OnRefresh="@LoadDataAsync"
                                            OnCreate="@CreateNew"
                                            OnDelete="@DeleteSelected" />
                </ToolBarContent>
                <HeaderContent Context="columnConfigurations">
                    @foreach (var column in columnConfigurations.Where(c => c.IsVisible).OrderBy(c => c.Order))
                    {
                        @if (column.PropertyName == "Code")
                        {
                            <EFTableColumnHeader TItem="StoreUserGroupDto" PropertyName="Code" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<StoreUserGroupDto, object>(x => x.Code))">@TranslationService.GetTranslation("field.code", "Codice")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "Name")
                        {
                            <EFTableColumnHeader TItem="StoreUserGroupDto" PropertyName="Name" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<StoreUserGroupDto, object>(x => x.Name))">@TranslationService.GetTranslation("field.name", "Nome")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "Status")
                        {
                            <EFTableColumnHeader TItem="StoreUserGroupDto" PropertyName="Status" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<StoreUserGroupDto, object>(x => x.Status))">@TranslationService.GetTranslation("field.status", "Status")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "CashierCount")
                        {
                            <EFTableColumnHeader TItem="StoreUserGroupDto" PropertyName="CashierCount" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<StoreUserGroupDto, object>(x => x.CashierCount))">@TranslationService.GetTranslation("field.cashierCount", "Operatori")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "IsSystemGroup")
                        {
                            <EFTableColumnHeader TItem="StoreUserGroupDto" PropertyName="IsSystemGroup" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<StoreUserGroupDto, object>(x => x.IsSystemGroup))">@TranslationService.GetTranslation("field.isSystemGroup", "Sistema")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                        else if (column.PropertyName == "IsDefault")
                        {
                            <EFTableColumnHeader TItem="StoreUserGroupDto" PropertyName="IsDefault" OnDragStartCallback="@_efTable.HandleColumnDragStart">
                                <MudTableSortLabel SortBy="@(new Func<StoreUserGroupDto, object>(x => x.IsDefault))">@TranslationService.GetTranslation("field.isDefault", "Default")</MudTableSortLabel>
                            </EFTableColumnHeader>
                        }
                    }
                    <MudTh Class="text-center" Style="min-width:120px;">@TranslationService.GetTranslation("common.actions", "Azioni")</MudTh>
                </HeaderContent>

                <RowTemplate Context="item">
                    @{
                        var visibleColumns = _efTable?.ColumnConfigurations?.Where(c => c.IsVisible).OrderBy(c => c.Order).ToList() ?? _initialColumns.Where(c => c.IsVisible).OrderBy(c => c.Order).ToList();
                    }
                    @foreach (var column in visibleColumns)
                    {
                        @if (column.PropertyName == "Code")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.code", "Codice")">
                                <MudChip T="string" Size="Size.Small" Color="Color.Primary" Variant="Variant.Outlined">
                                    @item.Code
                                </MudChip>
                            </MudTd>
                        }
                        else if (column.PropertyName == "Name")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.name", "Nome")">
                                <div class="d-flex align-center">
                                    <MudAvatar Color="Color.Primary" Size="Size.Small" Class="mr-2">
                                        <MudIcon Icon="@Icons.Material.Outlined.Groups" />
                                    </MudAvatar>
                                    <div>
                                        <MudText Typo="Typo.body2">@item.Name</MudText>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <MudText Typo="Typo.caption" Class="mud-text-secondary">@item.Description</MudText>
                                        }
                                    </div>
                                </div>
                            </MudTd>
                        }
                        else if (column.PropertyName == "Status")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.status", "Status")">
                                <MudChip T="string" Size="Size.Small" Color="GetStatusColor(item.Status)">
                                    @GetStatusText(item.Status)
                                </MudChip>
                            </MudTd>
                        }
                        else if (column.PropertyName == "CashierCount")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.cashierCount", "Operatori")">
                                <MudChip T="string" Size="Size.Small" Color="Color.Info">
                                    @item.CashierCount
                                </MudChip>
                            </MudTd>
                        }
                        else if (column.PropertyName == "IsSystemGroup")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.isSystemGroup", "Sistema")">
                                @if (item.IsSystemGroup)
                                {
                                    <MudChip T="string" Size="Size.Small" Color="Color.Default" Icon="@Icons.Material.Outlined.Lock">
                                        @TranslationService.GetTranslation("status.systemGroup", "Sistema")
                                    </MudChip>
                                }
                            </MudTd>
                        }
                        else if (column.PropertyName == "IsDefault")
                        {
                            <MudTd DataLabel="@TranslationService.GetTranslation("field.isDefault", "Default")">
                                @if (item.IsDefault)
                                {
                                    <MudChip T="string" Size="Size.Small" Color="Color.Warning" Icon="@Icons.Material.Outlined.Star">
                                        @TranslationService.GetTranslation("status.default", "Default")
                                    </MudChip>
                                }
                            </MudTd>
                        }
                    }
                    <MudTd DataLabel="@TranslationService.GetTranslation("common.actions", "Azioni")" Class="text-center">
                        <ActionButtonGroup EntityName="@item.Name"
                                           ItemDisplayName="@item.Name"
                                           ShowView="false"
                                           ShowEdit="true"
                                           ShowAuditLog="false"
                                           ShowToggleStatus="false"
                                           ShowDelete="@(!item.IsSystemGroup)"
                                           OnEdit="@(() => Edit(item.Id))"
                                           OnDelete="@(() => Delete(item))" />
                    </MudTd>
                </RowTemplate>

                <NoRecordsContent>
                    <div class="text-center pa-2 pa-sm-3 pa-md-4">
                        <MudIcon Icon="@Icons.Material.Outlined.Groups" Size="Size.Medium" Class="mb-4 mud-text-secondary" />
                        <MudText Typo="Typo.h6" Class="mb-2">
                            @(_items.Any() ?
                                                TranslationService.GetTranslation("store.noOperatorGroupsMatchFilters", "Nessun gruppo corrisponde ai filtri applicati") :
                                                TranslationService.GetTranslation("store.noOperatorGroupsFound", "Nessun gruppo trovato"))
                        </MudText>
                        @if (_items.Any())
                        {
                            <MudButton Variant="Variant.Text"
                                       Color="Color.Primary"
                                       StartIcon="@Icons.Material.Outlined.Clear"
                                       OnClick="@ClearFilters">
                                @TranslationService.GetTranslation("action.clearFilters", "Cancella filtri")
                            </MudButton>
                        }
                    </div>
                </NoRecordsContent>
            </EFTable>

            <!-- Pagination -->
            @if (_pagedResult != null)
            {
                <MudDivider Class="my-4" />
                <div class="d-flex justify-center align-center flex-wrap gap-4">
                    @if (_pagedResult.TotalPages > 1)
                    {
                        <MudPagination Count="@_pagedResult.TotalPages"
                                       Selected="@_currentPage"
                                       Color="Color.Primary"
                                       Size="Size.Medium"
                                       ShowFirstButton="true"
                                       ShowLastButton="true"
                                       SelectedChanged="@OnPageChanged" />
                    }
                    <MudText Typo="Typo.caption" Color="Color.Secondary">
                        @if (_pagedResult.TotalPages > 1)
                        {
                            @TranslationService.GetTranslation("pagination.info",
                                "Pagina {0} di {1} - Totale: {2} elementi",
                                _currentPage, _pagedResult.TotalPages, _pagedResult.TotalCount)
                        }
                        else
                        {
                            @TranslationService.GetTranslation("pagination.singlePage",
                                "Totale: {0} elementi",
                                _pagedResult.TotalCount)
                        }
                    </MudText>
                </div>
            }
        </div>
    </div>
}

@code {
    private bool _isLoading = true;
    private bool _isLoadingData = false;
    private string _searchTerm = string.Empty;
    private CancellationTokenSource? _searchDebounceCts;
    private PagedResult<StoreUserGroupDto>? _pagedResult;
    private int _currentPage = 1;
    private int _pageSize = 20;
    private List<StoreUserGroupDto> _items = new();
    private HashSet<StoreUserGroupDto> _selectedItems = new();
    private EFTable<StoreUserGroupDto> _efTable = null!;

    private List<EFTableColumnConfiguration> _initialColumns = new()
    {
        new() { PropertyName = "Code", DisplayName = "Codice", IsVisible = true, Order = 0 },
        new() { PropertyName = "Name", DisplayName = "Nome", IsVisible = true, Order = 1 },
        new() { PropertyName = "Status", DisplayName = "Status", IsVisible = true, Order = 2 },
        new() { PropertyName = "CashierCount", DisplayName = "Operatori", IsVisible = true, Order = 3 },
        new() { PropertyName = "IsSystemGroup", DisplayName = "Sistema", IsVisible = true, Order = 4 },
        new() { PropertyName = "IsDefault", DisplayName = "Default", IsVisible = true, Order = 5 }
    };

    private EventCallback<HashSet<StoreUserGroupDto>> _selectedItemsChangedCallback => EventCallback.Factory.Create<HashSet<StoreUserGroupDto>>(this, OnSelectedItemsChanged);

    private IEnumerable<StoreUserGroupDto> _filteredItems =>
        _items.Where(p =>
            string.IsNullOrEmpty(_searchTerm) ||
            p.Code.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
            p.Name.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
            (p.Description != null && p.Description.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)));

    private void OnSelectedItemsChanged(HashSet<StoreUserGroupDto> items)
    {
        _selectedItems = items;
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            if (!isAuthenticated)
            {
                await ShowLoginDialogAsync();
                return;
            }

            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            var errorMessage = ex.Message;
            Console.WriteLine($"[UI] OperatorGroupManagement page load error: {errorMessage}");
            Snackbar.Add($"Errore nel caricamento della pagina: {errorMessage}", Severity.Error);
            Logger.LogError(ex, "Error loading operator group management page");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _isLoadingData = true;
            _pagedResult = await StoreUserGroupService.GetPagedAsync(_currentPage, _pageSize);

            if (_pagedResult != null)
            {
                _items = _pagedResult.Items.ToList();
            }
        }
        catch (Exception ex)
        {
            var errorMessage = ex.Message;
            Console.WriteLine($"[UI] OperatorGroupManagement load data error: {errorMessage}");
            Snackbar.Add($"Errore: {errorMessage}", Severity.Error);
            Logger.LogError(ex, "Error loading operator groups");
        }
        finally
        {
            _isLoadingData = false;
        }
    }

    private void ClearFilters()
    {
        _searchTerm = string.Empty;
        StateHasChanged();
    }

    private async Task OnSearchChanged()
    {
        _currentPage = 1;
        _searchDebounceCts?.Cancel();
        _searchDebounceCts = new CancellationTokenSource();
        var token = _searchDebounceCts.Token;

        try
        {
            await Task.Delay(300, token);
            if (!token.IsCancellationRequested)
            {
                StateHasChanged();
            }
        }
        catch (OperationCanceledException)
        {
        }
    }

    private async Task OnPageChanged(int page)
    {
        _currentPage = page;
        await LoadDataAsync();
    }

    private void CreateNew()
    {
        NavigationManager.NavigateTo("/store/operator-groups/new");
    }

    private void Edit(Guid id)
    {
        NavigationManager.NavigateTo($"/store/operator-groups/{id}");
    }

    private async Task Delete(StoreUserGroupDto item)
    {
        if (item.IsSystemGroup)
        {
            Snackbar.Add(TranslationService.GetTranslation("store.cannotDeleteSystemGroup", "Impossibile eliminare un gruppo di sistema"), Severity.Warning);
            return;
        }

        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslation("store.confirmDeleteOperatorGroup",
            "Sei sicuro di voler eliminare il gruppo '{0}'? Questa azione non può essere annullata.",
            item.Name);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.delete", "Elimina"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                await StoreUserGroupService.DeleteAsync(item.Id);
                Snackbar.Add(TranslationService.GetTranslation("store.operatorGroupDeleted", "Gruppo eliminato con successo!"), Severity.Success);
                // Reload data to ensure consistency
                await LoadDataAsync();
            }
            catch (Exception ex)
            {
                var errorMessage = ex.Message;
                Snackbar.Add(TranslationService.GetTranslation("store.deleteOperatorGroupError",
                    "Errore nell'eliminazione del gruppo: {0}", errorMessage), Severity.Error);
                Logger.LogError(ex, "Error deleting operator group {GroupId}", item.Id);
            }
        }
    }

    private async Task DeleteSelected()
    {
        if (_selectedItems.Count == 0)
            return;

        // Filter out system groups
        var nonSystemGroups = _selectedItems.Where(x => !x.IsSystemGroup).ToList();
        if (nonSystemGroups.Count == 0)
        {
            Snackbar.Add(TranslationService.GetTranslation("store.cannotDeleteSystemGroups", "Non è possibile eliminare gruppi di sistema"), Severity.Warning);
            return;
        }

        var confirmTitle = TranslationService.GetTranslation("common.confirm", "Conferma");
        var confirmMessage = TranslationService.GetTranslationFormatted("store.confirmDeleteMultipleOperatorGroups",
            "Sei sicuro di voler eliminare {0} gruppi selezionati? Questa azione non può essere annullata.",
            nonSystemGroups.Count);

        var confirm = await DialogService.ShowMessageBox(
            confirmTitle,
            confirmMessage,
            yesText: TranslationService.GetTranslation("common.delete", "Elimina"),
            cancelText: TranslationService.GetTranslation("common.cancel", "Annulla"));

        if (confirm == true)
        {
            try
            {
                var deletedCount = 0;
                var failedCount = 0;
                var errorMessages = new List<string>();

                foreach (var item in nonSystemGroups)
                {
                    try
                    {
                        await StoreUserGroupService.DeleteAsync(item.Id);
                        deletedCount++;
                    }
                    catch (Exception ex)
                    {
                        failedCount++;
                        errorMessages.Add(ex.Message);
                        Logger.LogError(ex, "Error deleting operator group {GroupId}", item.Id);
                    }
                }

                _selectedItems.Clear();

                if (failedCount == 0)
                {
                    Snackbar.Add(TranslationService.GetTranslationFormatted("store.deletedMultipleOperatorGroups",
                        "{0} gruppi eliminati con successo!", deletedCount), Severity.Success);
                }
                else
                {
                    var message = TranslationService.GetTranslationFormatted("store.deletedMultipleOperatorGroupsPartial",
                        "{0} gruppi eliminati, {1} falliti", deletedCount, failedCount);
                    if (errorMessages.Any())
                    {
                        message += $" - Primo errore: {errorMessages.First()}";
                    }
                    Snackbar.Add(message, Severity.Warning);
                }

                // Reload data to ensure consistency
                await LoadDataAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add(TranslationService.GetTranslationFormatted("store.deleteError",
                    "Errore nell'eliminazione dei gruppi: {0}", ex.Message), Severity.Error);
                Logger.LogError(ex, "Error deleting selected operator groups");
            }
        }
    }

    private Color GetStatusColor(CashierGroupStatus status) => status switch
    {
        CashierGroupStatus.Active => Color.Success,
        CashierGroupStatus.Suspended => Color.Warning,
        CashierGroupStatus.Deleted => Color.Error,
        _ => Color.Default
    };

    private string GetStatusText(CashierGroupStatus status) => status switch
    {
        CashierGroupStatus.Active => TranslationService.GetTranslation("status.active", "Attivo"),
        CashierGroupStatus.Suspended => TranslationService.GetTranslation("status.suspended", "Sospeso"),
        CashierGroupStatus.Deleted => TranslationService.GetTranslation("status.deleted", "Eliminato"),
        _ => status.ToString()
    };

    private async Task ShowLoginDialogAsync()
    {
        var result = await AuthenticationDialogService.ShowLoginDialogAsync();
        if (result)
        {
            await OnInitializedAsync();
        }
    }
}
