    }

    private void ClearFilters()
    {
        _operationType = "all";
        _targetUser = string.Empty;
        _sourceTenant = "all";
        _targetTenant = "all";
        _startDate = DateTime.Today.AddDays(-7);
        _endDate = DateTime.Today.AddDays(1);
        _auditResult = "all";
        Snackbar.Add("Filtri puliti", Severity.Success);
    }

