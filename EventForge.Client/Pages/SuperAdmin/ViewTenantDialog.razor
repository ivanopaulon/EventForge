@using MudBlazor
@using EventForge.DTOs.Tenants

<MudDialog>
    <DialogContent>
        <MudContainer Style="max-width: 600px;">
            <MudText Typo="Typo.h6" Class="mb-4">Dettagli Tenant</MudText>
            
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField Value="@Tenant.Name"
                                  Label="Nome Tenant"
                                  Variant="Variant.Outlined"
                                  ReadOnly="true" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Value="@Tenant.DisplayName"
                                  Label="Nome Visualizzato"
                                  Variant="Variant.Outlined"
                                  ReadOnly="true" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField Value="@Tenant.Description"
                                  Label="Descrizione"
                                  Variant="Variant.Outlined"
                                  Lines="3"
                                  ReadOnly="true" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Value="@Tenant.Domain"
                                  Label="Dominio"
                                  Variant="Variant.Outlined"
                                  ReadOnly="true" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Value="@Tenant.ContactEmail"
                                  Label="Email Contatto"
                                  Variant="Variant.Outlined"
                                  ReadOnly="true" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField Value="@Tenant.MaxUsers.ToString()"
                                  Label="Massimo Utenti"
                                  Variant="Variant.Outlined"
                                  ReadOnly="true" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudChip T="string" Color="@(Tenant.IsActive ? Color.Success : Color.Error)" 
                             Size="Size.Medium">
                        @(Tenant.IsActive ? "Attivo" : "Inattivo")
                    </MudChip>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField Value="@Tenant.Id.ToString()"
                                  Label="ID Tenant"
                                  Variant="Variant.Outlined"
                                  ReadOnly="true" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Value="@Tenant.CreatedAt.ToString("dd/MM/yyyy HH:mm")"
                                  Label="Data Creazione"
                                  Variant="Variant.Outlined"
                                  ReadOnly="true" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Value="@Tenant.UpdatedAt.ToString("dd/MM/yyyy HH:mm")"
                                  Label="Ultimo Aggiornamento"
                                  Variant="Variant.Outlined"
                                  ReadOnly="true" />
                </MudItem>
            </MudGrid>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Close">Chiudi</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private dynamic? MudDialog { get; set; }
    [Parameter] public TenantResponseDto Tenant { get; set; } = null!;

    private void Close() => MudDialog?.Close();
}