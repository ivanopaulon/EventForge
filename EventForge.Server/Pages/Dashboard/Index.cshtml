@page
@model EventForge.Server.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Server Dashboard - Overview";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Server Dashboard</h2>
        <div>
            <small class="text-muted">Last updated: <span id="lastUpdate">@DateTime.Now.ToString("HH:mm:ss")</span></small>
        </div>
    </div>

    <!-- Status Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Server Status</h6>
                            <h4 class="mb-0">
                                <span class="badge bg-@(Model.Status?.Status == "Running" ? "success" : "warning")">
                                    @(Model.Status?.Status ?? "Unknown")
                                </span>
                            </h4>
                        </div>
                        <div class="text-success">
                            <svg width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-1">Uptime</h6>
                    <h4 class="mb-0">@(Model.Status != null ? FormatUptime(Model.Status.Uptime) : "N/A")</h4>
                    <small class="text-muted">Runtime</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-1">Version</h6>
                    <h4 class="mb-0">@Model.Status?.Version</h4>
                    <small class="text-muted">@Model.Status?.Environment</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-1">Environment</h6>
                    <h4 class="mb-0">
                        <span class="badge bg-@(Model.Status?.Environment == "Production" ? "danger" : "warning")">
                            @Model.Status?.Environment
                        </span>
                    </h4>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- System Information -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0">System Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <th width="40%">Operating System</th>
                                <td>@Model.Status?.OperatingSystem</td>
                            </tr>
                            <tr>
                                <th>.NET Runtime</th>
                                <td>@Model.Status?.RuntimeVersion</td>
                            </tr>
                            <tr>
                                <th>Machine Name</th>
                                <td>@Model.Status?.MachineName</td>
                            </tr>
                            <tr>
                                <th>CPU Cores</th>
                                <td>@Model.Status?.CpuCores</td>
                            </tr>
                            <tr>
                                <th>Total RAM</th>
                                <td>@Model.Status?.TotalMemoryMB MB</td>
                            </tr>
                            <tr>
                                <th>Working Set</th>
                                <td>@Model.Status?.UsedMemoryMB MB</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Active Connections -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Active Connections</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <th width="40%">Database Status</th>
                                <td>
                                    <span class="badge bg-@(Model.Status?.DatabaseConnected == true ? "success" : "danger")">
                                        @(Model.Status?.DatabaseConnected == true ? "Connected" : "Disconnected")
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Cache Type</th>
                                <td>@Model.Status?.CacheType</td>
                            </tr>
                            <tr>
                                <th>Active Users</th>
                                <td>@Model.Status?.ActiveUsers</td>
                            </tr>
                            <tr>
                                <th>Requests/Min</th>
                                <td>@Model.Status?.RequestsPerMinute.ToString("F2")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Status?.Status == "Maintenance")
    {
        <div class="row mt-3">
            <div class="col-12">
                <div class="alert alert-warning">
                    <strong>âš  Maintenance Mode Active</strong>
                    <p class="mb-0">System is under maintenance</p>
                </div>
            </div>
        </div>
    }
</div>

@functions {
    string FormatUptime(TimeSpan uptime)
    {
        if (uptime.TotalDays >= 1)
            return $"{(int)uptime.TotalDays}d {uptime.Hours}h";
        if (uptime.TotalHours >= 1)
            return $"{(int)uptime.TotalHours}h {uptime.Minutes}m";
        return $"{uptime.Minutes}m {uptime.Seconds}s";
    }
}

@section Scripts {
    <script>
        let refreshInterval;
        
        function refreshDashboard() {
            fetch('/api/dashboard/status')
                .then(response => response.json())
                .then(data => {
                    location.reload();
                })
                .catch(error => console.error('Refresh failed:', error));
        }
        
        refreshInterval = setInterval(refreshDashboard, 10000);
        
        window.addEventListener('beforeunload', () => {
            if (refreshInterval) clearInterval(refreshInterval);
        });
    </script>
}
