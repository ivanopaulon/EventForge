@page
@model EventForge.Server.Pages.Dashboard.MaintenanceModel
@{
    ViewData["Title"] = "Maintenance";
}

<div class="container-fluid">
    <h2 class="mb-4">Maintenance</h2>

    <div class="row g-4">
        <!-- Maintenance Mode -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Maintenance Mode</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="ToggleMaintenance">
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="maintenanceMode" 
                                       name="enabled" value="true" @(Model.IsMaintenanceMode ? "checked" : "") />
                                <label class="form-check-label" for="maintenanceMode">
                                    <strong>Enable Maintenance Mode</strong>
                                </label>
                            </div>
                            <small class="text-muted">
                                When enabled, only SuperAdmins can access the system. All other users will see a maintenance message.
                            </small>
                        </div>

                        <div class="mb-3">
                            <label for="maintenanceMessage" class="form-label">Custom Message</label>
                            <textarea class="form-control" id="maintenanceMessage" name="message" 
                                      rows="3" placeholder="System is under maintenance. Please check back later.">@Model.MaintenanceMessage</textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            Update Maintenance Settings
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Server Control -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Server Control</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>âš  Warning:</strong> Restarting the server will disconnect all active users and temporarily interrupt service.
                    </div>

                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#restartModal">
                        Restart Server
                    </button>
                </div>
            </div>
        </div>

        <!-- Log Retention -->
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Log Retention Policy</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="UpdateLogRetention" class="row g-3">
                        <div class="col-md-4">
                            <label for="retentionDays" class="form-label">Retention Period (days)</label>
                            <input type="number" class="form-control" id="retentionDays" name="retentionDays" 
                                   value="@Model.LogRetentionDays" min="7" max="365" />
                            <small class="text-muted">Logs older than this will be automatically deleted.</small>
                        </div>

                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary">
                                Update Retention Policy
                            </button>
                        </div>
                    </form>

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <h6>Current Log Statistics</h6>
                            <ul class="list-unstyled">
                                <li><strong>Total Log Entries:</strong> @Model.TotalLogEntries</li>
                                <li><strong>Oldest Entry:</strong> @(Model.OldestLogEntry?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</li>
                                <li><strong>Next Cleanup:</strong> @(Model.NextCleanup?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</li>
                            </ul>
                        </div>

                        <div class="col-md-6">
                            <form method="post" asp-page-handler="CleanupLogs">
                                <button type="submit" class="btn btn-warning" 
                                        onclick="return confirm('This will permanently delete old log entries. Continue?')">
                                    Run Cleanup Now
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Database Maintenance -->
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Database Maintenance</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Database Information</h6>
                            <ul class="list-unstyled">
                                <li><strong>Database:</strong> @Model.DatabaseName</li>
                                <li><strong>Size:</strong> @Model.DatabaseSizeMb MB</li>
                                <li><strong>Tables:</strong> @Model.TableCount</li>
                            </ul>
                        </div>

                        <div class="col-md-6">
                            <form method="post" asp-page-handler="OptimizeDatabase">
                                <button type="submit" class="btn btn-secondary">
                                    Optimize Database
                                </button>
                                <small class="d-block text-muted mt-2">
                                    Rebuilds indexes and updates statistics. May take several minutes.
                                </small>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Restart Confirmation Modal -->
<div class="modal fade" id="restartModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Server Restart</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Are you sure you want to restart the server?</strong></p>
                <p>This action will:</p>
                <ul>
                    <li>Disconnect all active users</li>
                    <li>Interrupt all ongoing operations</li>
                    <li>Cause temporary service downtime</li>
                </ul>
                <p class="text-danger mb-0">This cannot be undone!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="RestartServer" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        Yes, Restart Server
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
