@page "/dashboard/users"
@model EventForge.Server.Pages.Dashboard.UsersModel
@{
    ViewData["Title"] = "Users";
    ViewData["PageSection"] = "Multi-Tenant";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people-fill"></i> Gestione Utenti</h2>
    <a href="/dashboard/userdetail" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuovo Utente
    </a>
</div>

<!-- Statistics -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h5>Totali</h5>
                <h2 class="display-4">@Model.TotalUsers</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h5>Attivi</h5>
                <h2 class="display-4">@Model.ActiveUsers</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <h5>SuperAdmin</h5>
                <h2 class="display-4">@Model.SuperAdminCount</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h5>Password da Cambiare</h5>
                <h2 class="display-4">@Model.MustChangePasswordCount</h2>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" asp-for="SearchTerm" class="form-control" 
                       placeholder="Cerca per username, email, nome..." />
            </div>
            <div class="col-md-3">
                <select asp-for="TenantFilter" class="form-select">
                    <option value="">Tutti i tenant</option>
                    @foreach (var tenant in Model.AvailableTenants)
                    {
                        <option value="@tenant.Id">@tenant.DisplayName</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <select asp-for="StatusFilter" class="form-select">
                    <option value="">Tutti gli stati</option>
                    <option value="active">Solo Attivi</option>
                    <option value="inactive">Solo Disabilitati</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-secondary w-100">
                    <i class="bi bi-search"></i> Cerca
                </button>
            </div>
            <div class="col-md-1">
                <a href="/dashboard/users" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-x-circle"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Utente</th>
                        <th>Tenant</th>
                        <th>Email</th>
                        <th>Ruoli</th>
                        <th>Stato</th>
                        <th>Ultimo Accesso</th>
                        <th class="text-end">Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>
                                <strong>@user.Username</strong><br/>
                                <small class="text-muted">@user.FirstName @user.LastName</small>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@user.TenantCode</span>
                            </td>
                            <td><small>@user.Email</small></td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                    <span class="badge bg-info me-1">@role</span>
                                }
                                @if (!user.Roles.Any())
                                {
                                    <span class="text-muted">Nessun ruolo</span>
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Attivo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Disabilitato</span>
                                }
                                @if (user.MustChangePassword)
                                {
                                    <br/><span class="badge bg-warning mt-1">Cambia PWD</span>
                                }
                            </td>
                            <td>
                                @if (user.LastLoginAt.HasValue)
                                {
                                    <span>@user.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                }
                                else
                                {
                                    <span class="text-muted">Mai</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a href="/dashboard/userdetail?id=@user.Id" 
                                       class="btn btn-sm btn-outline-primary"
                                       title="Modifica">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" asp-page-handler="ResetPassword" 
                                          asp-route-id="@user.Id" class="d-inline">
                                        <button type="submit" 
                                                class="btn btn-sm btn-outline-warning"
                                                title="Reset Password"
                                                onclick="return confirm('Resettare la password per @user.Username?')">
                                            <i class="bi bi-key"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Users.Any())
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> 
                Nessun utente trovato.
            </div>
        }
    </div>
</div>
