@page "/dashboard/licenses"
@model EventForge.Server.Pages.Dashboard.LicensesModel
@{
    ViewData["Title"] = "Licenses";
    ViewData["PageSection"] = "Multi-Tenant";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-card-checklist"></i> Gestione Licenze</h2>
    <a href="/dashboard/licensedetail" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuova Licenza
    </a>
</div>

<!-- Statistics -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h5>Totali</h5>
                <h2 class="display-4">@Model.TotalLicenses</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h5>Attive</h5>
                <h2 class="display-4">@Model.ActiveLicenses</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h5>In Uso</h5>
                <h2 class="display-4">@Model.LicensesInUse</h2>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <input type="text" asp-for="SearchTerm" class="form-control" 
                       placeholder="Cerca per nome, descrizione..." />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-secondary w-100">
                    <i class="bi bi-search"></i> Cerca
                </button>
            </div>
            <div class="col-md-3">
                <a href="/dashboard/licenses" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-x-circle"></i> Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Licenses Table -->
<div class="card">
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nome Licenza</th>
                        <th>Tier</th>
                        <th>Max Utenti</th>
                        <th>Max API Calls/Mese</th>
                        <th>Features</th>
                        <th>Tenant Assegnati</th>
                        <th class="text-end">Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var license in Model.Licenses)
                    {
                        <tr>
                            <td>
                                <strong>@license.DisplayName</strong><br/>
                                <small class="text-muted">@license.Name</small>
                                @if (!string.IsNullOrEmpty(license.Description))
                                {
                                    <br/><small class="text-muted">@license.Description</small>
                                }
                            </td>
                            <td>
                                @{
                                    var tierBadge = license.TierLevel switch
                                    {
                                        1 => "bg-secondary",
                                        2 => "bg-primary",
                                        3 => "bg-warning text-dark",
                                        _ => "bg-info"
                                    };
                                    var tierName = license.TierLevel switch
                                    {
                                        1 => "Basic",
                                        2 => "Standard",
                                        3 => "Premium",
                                        _ => $"Tier {license.TierLevel}"
                                    };
                                }
                                <span class="badge @tierBadge">@tierName</span>
                            </td>
                            <td>@license.MaxUsers.ToString("N0")</td>
                            <td>@license.MaxApiCallsPerMonth.ToString("N0")</td>
                            <td>
                                @if (license.FeatureCount > 0)
                                {
                                    <span class="badge bg-info">@license.FeatureCount features</span>
                                }
                                else
                                {
                                    <span class="text-muted">Nessuna feature</span>
                                }
                            </td>
                            <td>
                                @if (license.AssignedTenantCount > 0)
                                {
                                    <span class="badge bg-success">@license.AssignedTenantCount tenant</span>
                                }
                                else
                                {
                                    <span class="text-muted">Non assegnata</span>
                                }
                            </td>
                            <td class="text-end">
                                <a href="/dashboard/licensedetail?id=@license.Id" 
                                   class="btn btn-sm btn-outline-primary"
                                   title="Modifica">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Licenses.Any())
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> 
                Nessuna licenza trovata.
            </div>
        }
    </div>
</div>
