<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventForge Server</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/server-dashboard.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark text-white" id="sidebar-wrapper">
            <!-- Header -->
            <div class="sidebar-heading border-bottom bg-dark">
                <div class="d-flex align-items-center justify-content-between p-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-diagram-3-fill text-primary fs-4 me-2"></i>
                        <span class="sidebar-title fw-bold">EventForge</span>
                    </div>
                    <button class="btn btn-sm btn-outline-secondary d-lg-none" id="sidebarToggle">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
            </div>
            
            <div class="list-group list-group-flush flex-grow-1">
                <!-- Monitoring Section -->
                <div class="sidebar-section">
                    <div class="sidebar-section-title">
                        <i class="bi bi-speedometer2"></i>
                        <span>Monitoring</span>
                    </div>
                    <a href="/dashboard" 
                       class="list-group-item list-group-item-action bg-dark text-white border-0 @(Context.Request.Path == "/dashboard" || Context.Request.Path == "/Dashboard/Index" ? "active" : "")">
                        <i class="bi bi-house-fill me-2"></i>
                        <span>Overview</span>
                    </a>
                    <a href="/dashboard/health" 
                       class="list-group-item list-group-item-action bg-dark text-white border-0 @(Context.Request.Path.StartsWithSegments("/dashboard/health") ? "active" : "")">
                        <i class="bi bi-heart-pulse-fill me-2"></i>
                        <span>Health Checks</span>
                    </a>
                    <a href="/dashboard/performance" 
                       class="list-group-item list-group-item-action bg-dark text-white border-0 @(Context.Request.Path.StartsWithSegments("/dashboard/performance") ? "active" : "")">
                        <i class="bi bi-lightning-fill me-2"></i>
                        <span>Performance</span>
                    </a>
                    <a href="/dashboard/logs" 
                       class="list-group-item list-group-item-action bg-dark text-white border-0 @(Context.Request.Path.StartsWithSegments("/dashboard/logs") ? "active" : "")">
                        <i class="bi bi-file-text-fill me-2"></i>
                        <span>Logs</span>
                    </a>
                    <a href="/dashboard/maintenance" 
                       class="list-group-item list-group-item-action bg-dark text-white border-0 @(Context.Request.Path.StartsWithSegments("/dashboard/maintenance") ? "active" : "")">
                        <i class="bi bi-tools me-2"></i>
                        <span>Maintenance</span>
                    </a>
                </div>

                <!-- Multi-Tenant Section (placeholder - PR #2) -->
                <div class="sidebar-section">
                    <div class="sidebar-section-title">
                        <i class="bi bi-building"></i>
                        <span>Multi-Tenant</span>
                    </div>
                    <a href="/dashboard/tenants" 
                       class="list-group-item list-group-item-action bg-dark text-white border-0 disabled">
                        <i class="bi bi-building me-2"></i>
                        <span>Tenants</span>
                        <span class="badge bg-secondary ms-auto">Soon</span>
                    </a>
                    <a href="/dashboard/users" 
                       class="list-group-item list-group-item-action bg-dark text-white border-0 disabled">
                        <i class="bi bi-people-fill me-2"></i>
                        <span>Users</span>
                        <span class="badge bg-secondary ms-auto">Soon</span>
                    </a>
                    <a href="/dashboard/licenses" 
                       class="list-group-item list-group-item-action bg-dark text-white border-0 disabled">
                        <i class="bi bi-card-checklist me-2"></i>
                        <span>Licenses</span>
                        <span class="badge bg-secondary ms-auto">Soon</span>
                    </a>
                    <a href="/dashboard/roles" 
                       class="list-group-item list-group-item-action bg-dark text-white border-0 disabled">
                        <i class="bi bi-shield-lock-fill me-2"></i>
                        <span>Roles & Permissions</span>
                        <span class="badge bg-secondary ms-auto">Soon</span>
                    </a>
                </div>
            </div>

            <!-- User Section (bottom) -->
            <div class="sidebar-footer border-top bg-dark mt-auto">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="p-3">
                        <div class="d-flex align-items-center mb-2">
                            <div class="avatar-circle bg-primary text-white me-2">
                                @(User.Identity.Name?.Length >= 2 ? User.Identity.Name.Substring(0, 2).ToUpper() : "??")
                            </div>
                            <div class="flex-grow-1 text-truncate">
                                <small class="d-block text-white fw-semibold text-truncate">@User.Identity.Name</small>
                                <small class="text-muted">SuperAdmin</small>
                            </div>
                        </div>
                        <form method="post" asp-page="/Logout">
                            <button type="submit" class="btn btn-sm btn-outline-light w-100">
                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="flex-fill">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom sticky-top">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary me-2" id="sidebarToggleTop">
                        <i class="bi bi-list"></i>
                    </button>
                    
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb" class="d-none d-md-block">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                            @if (!string.IsNullOrEmpty(ViewData["PageSection"]?.ToString()))
                            {
                                <li class="breadcrumb-item">@ViewData["PageSection"]</li>
                            }
                            @if (!string.IsNullOrEmpty(ViewData["Title"]?.ToString()))
                            {
                                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                            }
                        </ol>
                    </nav>

                    <div class="ms-auto">
                        <span class="badge bg-primary">v@System.Reflection.Assembly.GetExecutingAssembly().GetName().Version?.ToString(3)</span>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="container-fluid py-4">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="footer mt-auto py-3 bg-light border-top">
                <div class="container-fluid text-center text-muted">
                    <small>EventForge Server &copy; @DateTime.Now.Year</small>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sidebar.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
