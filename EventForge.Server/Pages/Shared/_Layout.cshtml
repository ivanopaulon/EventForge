<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventForge Server</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/server-dashboard.css" />
</head>
<body>
    <header class="navbar navbar-dark bg-dark sticky-top shadow">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <strong>EventForge Server</strong>
            </a>
            @if (Context.Request.Path.StartsWithSegments("/dashboard"))
            {
                <div class="d-flex align-items-center text-white">
                    <span class="me-3">@User.Identity?.Name</span>
                    <form method="post" asp-page="/Logout">
                        <button type="submit" class="btn btn-sm btn-outline-light">Logout</button>
                    </form>
                </div>
            }
        </div>
    </header>

    @if (!Context.Request.Path.StartsWithSegments("/setup"))
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path == "/dashboard" ? "active" : "")" href="/dashboard">Overview</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path == "/dashboard/health" ? "active" : "")" href="/dashboard/health">Health Checks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path == "/dashboard/performance" ? "active" : "")" href="/dashboard/performance">Performance</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path == "/dashboard/logs" ? "active" : "")" href="/dashboard/logs">Logs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path == "/dashboard/maintenance" ? "active" : "")" href="/dashboard/maintenance">Maintenance</a>
                    </li>
                </ul>
            </div>
        </nav>
    }

    <main class="container-fluid py-4">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-light border-top">
        <div class="container-fluid text-center text-muted">
            <small>EventForge Server v@System.Reflection.Assembly.GetExecutingAssembly().GetName().Version?.ToString(3) &copy; @DateTime.Now.Year</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
