<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <!-- ASP.NET Core Module Configuration -->
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      
      <!-- 
        ASP.NET Core Module Settings:
        - processPath: Path to the dotnet executable or the application executable
        - arguments: Command-line arguments (the DLL to run)
        - stdoutLogEnabled: Enable stdout logging for debugging (set to false in production for performance)
        - stdoutLogFile: Location where stdout logs will be written
        - hostingModel: "inprocess" for better performance (runs inside IIS worker process)
        - forwardWindowsAuthToken: Set to true if using Windows Authentication
      -->
      <aspNetCore processPath="dotnet" 
                  arguments=".\EventForge.Server.dll" 
                  stdoutLogEnabled="true" 
                  stdoutLogFile=".\logs\stdout" 
                  hostingModel="inprocess"
                  forwardWindowsAuthToken="false">
        <environmentVariables>
          <!-- 
            Environment Variables:
            - Set ASPNETCORE_ENVIRONMENT here or in IIS Application Settings
            - Production environment will use appsettings.json and appsettings.Production.json
            - Never hardcode secrets here - use Azure Key Vault, User Secrets, or IIS Application Settings
          -->
          <!-- <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" /> -->
          
          <!-- 
            Port Configuration:
            - DO NOT set ASPNETCORE_URLS here
            - IIS manages port binding automatically through site bindings
            - The application will receive requests on whatever port(s) are configured in IIS
          -->
          
          <!-- Database Connection Strings (if not using appsettings.json) -->
          <!-- <environmentVariable name="ConnectionStrings__SqlServer" value="YourConnectionString" /> -->
          <!-- <environmentVariable name="ConnectionStrings__LogDb" value="YourLogConnectionString" /> -->
          
          <!-- JWT Secret Key (REQUIRED in Production - override the default) -->
          <!-- <environmentVariable name="Authentication__Jwt__SecretKey" value="YourSecureSecretKeyHere" /> -->
        </environmentVariables>
      </aspNetCore>
      
      <!-- Static Content MIME Type Mappings for Blazor WebAssembly -->
      <staticContent>
        <remove fileExtension=".wasm" />
        <mimeMap fileExtension=".wasm" mimeType="application/wasm" />
        <remove fileExtension=".json" />
        <mimeMap fileExtension=".json" mimeType="application/json" />
        <remove fileExtension=".br" />
        <mimeMap fileExtension=".br" mimeType="application/brotli" />
        <remove fileExtension=".gz" />
        <mimeMap fileExtension=".gz" mimeType="application/gzip" />
        <remove fileExtension=".dat" />
        <mimeMap fileExtension=".dat" mimeType="application/octet-stream" />
      </staticContent>

      <!-- URL Rewrite Rules for SPA routing -->
      <rewrite>
        <rules>
          <rule name="SPA fallback" stopProcessing="true">
            <match url=".*" />
            <conditions logicalGrouping="MatchAll">
              <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
              <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
              <add input="{REQUEST_URI}" pattern="^/api" negate="true" />
              <add input="{REQUEST_URI}" pattern="^/swagger" negate="true" />
              <add input="{REQUEST_URI}" pattern="^/health" negate="true" />
            </conditions>
            <action type="Rewrite" url="/index.html" />
          </rule>
        </rules>
      </rewrite>

      <!-- Security Settings -->
      <security>
        <requestFiltering>
          <fileExtensions>
            <clear />
          </fileExtensions>
          <!-- Adjust max request length if needed (in bytes, default is 30MB) -->
          <requestLimits maxAllowedContentLength="104857600" />
        </requestFiltering>
      </security>
      
      <!-- HTTP Response Headers for Security -->
      <httpProtocol>
        <customHeaders>
          <!-- Remove server header for security -->
          <remove name="X-Powered-By" />
        </customHeaders>
      </httpProtocol>
      
      <!-- Compression Settings (optional - improve performance) -->
      <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    </system.webServer>
  </location>
</configuration>
